	<name>SafeOnline Beid Device Web Application</name>
    <description>
        SafeOnline Beid Device Web Application.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-beid-webapp</artifactId>
	<version>1.1-SNAPSHOT</version>
	<packaging>war</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-applets</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>
										net.lin-k.safe-online
									</groupId>
									<artifactId>
										safe-online-java-version-applet-package
									</artifactId>
									<destFileName>
										java-version-applet.jar
									</destFileName>
									<outputDirectory>
										${project.build.directory}/${project.build.finalName}
									</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>
										net.lin-k.safe-online
									</groupId>
									<artifactId>
										safe-online-auth-applet-package
									</artifactId>
									<destFileName>
										safe-online-auth-applet-package.jar
									</destFileName>
									<outputDirectory>
										${project.build.directory}/${project.build.finalName}
									</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>
										net.lin-k.safe-online
									</groupId>
									<artifactId>
										safe-online-identity-applet-package
									</artifactId>
									<destFileName>
										safe-online-identity-applet-package.jar
									</destFileName>
									<outputDirectory>
										${project.build.directory}/${project.build.finalName}
									</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>
										net.lin-k.safe-online
									</groupId>
									<artifactId>
										safe-online-auth-pcsc-applet-package
									</artifactId>
									<destFileName>
										safe-online-auth-pcsc-applet-package.jar
									</destFileName>
									<outputDirectory>
										${project.build.directory}/${project.build.finalName}
									</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<dependentWarExcludes>
						WEB-INF/web.xml,index.jsp
					</dependentWarExcludes>
					<webResources>
						<resource>
							<directory>
								${basedir}/src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

