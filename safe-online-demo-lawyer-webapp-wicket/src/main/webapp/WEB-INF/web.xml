<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Demo Lawyer Application</display-name>

	<servlet>
		<servlet-name>lawyerapp</servlet-name>
		<servlet-class>
			wicket.protocol.http.WicketServlet
		</servlet-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>
				net.link.safeonline.demo.lawyer.webapp.LawyerApplication
			</param-value>
		</init-param>
		<init-param>
			<param-name>SafeOnlineAuthenticationServiceUrl</param-name>
			<param-value>${auth.webapp.location}</param-value>
		</init-param>
		<init-param>
			<param-name>ApplicationName</param-name>
			<param-value>safe-online-demo-lawyer</param-value>
		</init-param>
		<!--<init-param>
			<param-name>configuration</param-name>
			<param-value>DEPLOYMENT</param-value>
			</init-param>-->
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>lawyerapp</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>
			net.link.safeonline.sdk.auth.filter.LoginFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>