<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>Siemens Acceptance Test OSGI bundle</name>
	<description>
       This bundle is used in the acceptance scenario for the attribute pull feature. 
    </description>

	<groupId>net.lin-k.safe-online.siemens</groupId>
	<artifactId>attribute-pull-acceptance</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<fork>true</fork>
				</configuration>
				<inherited>true</inherited>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xml-maven-plugin</artifactId>
				<configuration>
					<catalogs>
						<catalog>src/main/catalog/catalog.xml</catalog>
					</catalogs>
					<validationSets>
						<validationSet>
							<dir>.</dir>
							<includes>
								<include> target/classes/**/*.xhtml </include>
								<include> target/classes/**/*.html </include>
								<include> target/classes/**/*.xml </include>
							</includes>
						</validationSet>
					</validationSets>
				</configuration>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>validate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Export-Package>!*</Export-Package>
						<Private-Package>*</Private-Package>
						<Bundle-Activator>
							net.link.safeonline.siemens.acceptance.attributepull.AcceptanceAttributeServiceActivator</Bundle-Activator>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi-plugin</artifactId>
			<version>1.3-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-sdk</artifactId>
			<version>1.3-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>


		<!-- Specific Dependencies: External -->
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>1.0.1</version>
			<scope>compile</scope>
		</dependency>

	</dependencies>

</project>
