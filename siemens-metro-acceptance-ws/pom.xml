<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.3-p1-SNAPSHOT</version>
	</parent>

	<name>Siemens Acceptance Test WS Definition using Metro WS Stack
	</name>
	<description>
		Contains WSDL for the Siemens Acceptance Test Web Service
		using Metro.
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>siemens-metro-acceptance-ws
	</artifactId>
	<version>1.3-p1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>wsimport</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<taskdef classname="org.jboss.wsf.spi.tools.ant.WSConsumeTask"
									name="wsconsume">
									<classpath>
										<path refid="maven.compile.classpath" />
										<path refid="maven.plugin.classpath" />
										<path refid="maven.runtime.classpath" />
									</classpath>
								</taskdef>
								<mkdir dir="${project.build.directory}/generated-sources/main/java" />
								<mkdir dir="${project.build.directory}/generated-classes/jbossws" />
								<wsconsume debug="true" fork="true" keep="true"
									destdir="${project.build.directory}/generated-classes/jbossws"
									verbose="true"
									wsdl="${basedir}/src/main/resources/siemens-metro-service.wsdl"
									sourcedestdir="${project.build.directory}/generated-sources/main/java"
									catalog="${basedir}/src/main/catalog/catalog.xml">
								</wsconsume>
							</tasks>
							<sourceRoot>
								${project.build.directory}/generated-sources/main/java
							</sourceRoot>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- Specific Dependencies: External -->
		<dependency>
			<groupId>org.jboss.ws.metro</groupId>
			<artifactId>jbossws-metro-client</artifactId>
			<version>3.0.3.GA</version>
		</dependency>
		<!-- Specifiec Dependencies: External -->
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin
				</artifactId>
			</plugin>
		</plugins>
	</reporting>

</project>
