<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.4-SNAPSHOT</version>
	</parent>

	<name>Siemens WS Authentication Acceptance Test WS Definition
		using JAX-WS Stack
	</name>
	<description>
		Contains WSDL for the Siemens WS Authentication Acceptance
		Test Web Service
		using JAX-WS.
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>siemens-auth-ws-acceptance-jaxws-ws
	</artifactId>
	<version>1.4-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>wsimport</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<taskdef classname="com.sun.tools.ws.ant.WsImport" name="wsimport">
									<classpath>
										<path refid="maven.compile.classpath" />
										<path refid="maven.plugin.classpath" />
										<path refid="maven.runtime.classpath" />
									</classpath>
								</taskdef>
								<mkdir dir="${project.build.directory}/generated-sources/main/java" />
								<mkdir dir="${project.build.directory}/generated-classes/jaxws" />
								<wsimport debug="true" fork="true"
									destdir="${project.build.directory}/generated-classes/jaxws"
									verbose="true" wsdl="${basedir}/src/main/resources/siemens-auth-ws.wsdl"
									sourcedestdir="${project.build.directory}/generated-sources/main/java"
									catalog="${basedir}/src/main/catalog/catalog.xml">
									<produces
										dir="${project.build.directory}/generated-sources/main/java">
										<include name="**/*.java" />
									</produces>
								</wsimport>
							</tasks>
							<sourceRoot>
								${project.build.directory}/generated-sources/main/java
							</sourceRoot>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- Specific Dependencies: External -->
		<dependency>
			<groupId>com.sun.xml.ws</groupId>
			<artifactId>jaxws-tools</artifactId>
			<optional>true</optional>
		</dependency>

		<!-- Specifiec Dependencies: External -->
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin
				</artifactId>
			</plugin>
		</plugins>
	</reporting>

</project>
