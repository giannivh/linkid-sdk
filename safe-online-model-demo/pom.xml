	<name>SafeOnline Model Demo</name>
    <description>
        The SafeOnline Model Demo.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-model-demo</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>ejb</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<configuration>
					<ejbVersion>3.0</ejbVersion>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
					<generateClient>true</generateClient>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Dependency Groups -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-as</artifactId>
