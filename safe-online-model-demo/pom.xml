   			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-demo-startup-runtime</artifactId>
			<version>1.2-SNAPSHOT</version>
            <scope>runtime</scope>
            <type>war</type>
        </dependency>
            <dependency>
                <groupId>net.lin-k.safe-online</groupId>
                <artifactId>safe-online-demo-startup-runtime</artifactId>
                <version>1.2-SNAPSHOT</version>
                <scope>runtime</scope>
                <type>zip</type>
            </dependency>
		<dependency>
