<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>safe-online</artifactId>
		<groupId>net.lin-k</groupId>
		<version>1.3-p1-SNAPSHOT</version>
	</parent>

	<name>SafeOnline Performance Agent Distribution</name>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-performance-agent-distribution</artifactId>
	<version>1.3-p1-SNAPSHOT</version>
	<packaging>pom</packaging>

    <build>

		<resources>
			<resource>
				<directory>src/main</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

        <plugins>

            <!-- 1. Expand Maven parameters into our patches. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>filter</id>
						<phase>process-resources</phase>
						<goals>
							<goal>resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

            <!-- 2. Gather all the artifacts that will make up the distribution. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>

					<execution>
						<id>unpack</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>net.lin-k.safe-online</groupId>
									<artifactId>safe-online-distribution</artifactId>
                                    <version>1.3-p1-SNAPSHOT</version>
                                    <type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/files</outputDirectory>
						</configuration>
					</execution>

                    <!-- Copy EAR dependencies into /deploy.
                         maven-assembly-plugin will move them to /jboss/server/default/deploy. -->
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
                            <includeTypes>ear</includeTypes>
                            <excludeScope>provided</excludeScope>
							<outputDirectory>${project.build.directory}/deploy</outputDirectory>
						</configuration>
					</execution>

                    <!-- Copy non-provided, non-EAR dependencies to /dependency dir.
                         maven-assembly-plugin will move them to /jboss/server/default/lib. -->
					<execution>
						<id>copy-deps</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<excludeScope>provided</excludeScope>
                            <excludeTypes>ear</excludeTypes>
							<outputDirectory>${project.build.directory}/dependency</outputDirectory>
						</configuration>
					</execution>

				</executions>
			</plugin>

            <!-- 3. Apply customization patches to the default distribution configuration. -->
            <plugin>
                <artifactId>maven-patch-plugin</artifactId>
                <executions>
                    <execution>
                        <id>dist:general</id>
                        <phase>package</phase>
                        <goals>
                            <goal>apply</goal>
                        </goals>
                        <configuration>
                            <naturalOrderProcessing>true</naturalOrderProcessing>
                            <patchDirectory>target/classes/patches</patchDirectory>
                            <targetDirectory>target/files/safe-online-distribution-${safe-online.version}</targetDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- 4. Assemble our distribution. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
                        <descriptor>src/main/assembly/jboss-agent.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
    </build>

	<dependencies>

        <!-- Specific Dependencies: Distribution -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-distribution</artifactId>
            <version>1.3-p1-SNAPSHOT</version>
			<scope>provided</scope>
			<type>zip</type>
		</dependency>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-performance-agent-deploy</artifactId>
			<version>1.3-p1-SNAPSHOT</version>
			<type>ear</type>
		</dependency>

	</dependencies>

</project>
