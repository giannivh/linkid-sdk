<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-performance-agent-service</artifactId>
	<packaging>sar</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>SafeOnline Performance Agent Service</name>
	<description>
		Agent for the SafeOnline Performance Testing.
	</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-sar-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-container</artifactId>
			<type>pom</type>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-model-performance</artifactId>
			<type>ejb-client</type>
			<version>1.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>net.lin-k.safe-online</groupId>
					<artifactId>safe-online-model</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.lin-k.safe-online</groupId>
					<artifactId>safe-online-model-beid</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.lin-k.safe-online</groupId>
					<artifactId>
						safe-online-performance-keystore
					</artifactId>
				</exclusion>
            </exclusions>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-performance-scenario</artifactId>
			<type>ejb-client</type>
			<version>1.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>net.lin-k.safe-online</groupId>
					<artifactId>
						safe-online-performance-keystore
					</artifactId>
				</exclusion>
            </exclusions>
		</dependency>
        <dependency>
          <groupId>net.lin-k.safe-online</groupId>
          <artifactId>safe-online-performance-keystore</artifactId>
          <version>1.0-SNAPSHOT</version>
        </dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>
				safe-online-performance-console-base
			</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<exclusions>
				<!-- http://jira.codehaus.org/browse/MNG-2686 -->
				<exclusion>
					<groupId>javax.servlet</groupId>
					<artifactId>servlet-api</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		<dependency>
			<groupId>jgroups</groupId>
			<artifactId>jgroups</artifactId>
		</dependency>
	</dependencies>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
</project>
