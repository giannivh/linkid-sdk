<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.2-SNAPSHOT</version>
	</parent>

	<name>SafeOnline Performance Agent Service</name>
	<description>
		Agent for the SafeOnline Performance Testing.
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-performance-agent-service</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>sar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-sar-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-container</artifactId>
			<type>pom</type>
			<version>1.2-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-performance-scenario</artifactId>
            <type>ejb-client</type>
			<version>1.2-SNAPSHOT</version>
            <exclusions>
                <exclusion>
					<groupId>net.lin-k.safe-online</groupId>
                    <artifactId>
                        safe-online-performance-keystore
                    </artifactId>
                </exclusion>
                <exclusion>
					<groupId>net.lin-k.safe-online</groupId>
                    <artifactId>
                        safe-online-model-performance
                    </artifactId>
                </exclusion>
                <exclusion>
					<groupId>net.lin-k.safe-online</groupId>
                    <artifactId>
                        safe-online-performance-entity
                    </artifactId>
                </exclusion>
                <exclusion>
					<groupId>net.lin-k.safe-online</groupId>
                    <artifactId>
                        safe-online-performance-scenario-base
                    </artifactId>
                </exclusion>
                <exclusion>
					<groupId>net.lin-k.safe-online</groupId>
                    <artifactId>
                        safe-online-performance-scenario-keystore
                    </artifactId>
                </exclusion>
            </exclusions>
		</dependency>
		<!--dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-sdk</artifactId>
            <type>jar</type>
			<version>1.2-SNAPSHOT</version>
            <exclusions>
                <exclusion>
                    <groupId>org.jboss.seam</groupId>
                    <artifactId>jboss-seam</artifactId>
                </exclusion>
            </exclusions>
		</dependency-->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-j2ee-util</artifactId>
			<version>1.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>
				safe-online-performance-console-base
			</artifactId>
			<version>1.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<exclusions>
				<!-- http://jira.codehaus.org/browse/MNG-2686 -->
				<exclusion>
					<groupId>javax.servlet</groupId>
					<artifactId>servlet-api</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>

</project>
