<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.lin-k.safe-online.client</groupId>
        <artifactId>sdk</artifactId>
        <version>1.17</version>
    </parent>

    <name>SafeOnline SAML Authentication Context Definition</name>
    <description>
        Contains JAXB2 classes for the supported SAML v2 authentication
        context declarations.
    </description>

    <groupId>net.lin-k.safe-online.client.sdk</groupId>
    <artifactId>safe-online-saml-authn-context</artifactId>
    <packaging>jar</packaging>

    <properties>
        <jaxb-api.version>2.1</jaxb-api.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>javax.xml.bind</groupId>
                <artifactId>jaxb-api</artifactId>
                <version>${jaxb-api.version}</version>
            </dependency>            
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>wsimport</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
                                    <classpath>
                                        <path refid="maven.compile.classpath" />
                                        <path refid="maven.plugin.classpath" />
                                        <path refid="maven.runtime.classpath" />
                                    </classpath>
                                </taskdef>
                                <mkdir dir="${project.build.directory}/generated-sources/xjc" />
                                <xjc destdir="${project.build.directory}/generated-sources/xjc" catalog="${basedir}/src/main/catalog/catalog.xml">
                                    <schema dir="${basedir}/src/main/resources" includes="saml-schema-authn-context-2.0.xsd" />
                                    <schema dir="${basedir}/src/main/resources" includes="saml-schema-authn-context-ppt-2.0.xsd" />
                                    <schema dir="${basedir}/src/main/resources" includes="saml-schema-authn-context-smartcardpki-2.0.xsd" />
                                    <produces dir="${project.build.directory}/generated-sources/xjc">
                                        <include name="**/*.java" />
                                    </produces>
                                </xjc>
                            </tasks>
                            <sourceRoot>
                                ${project.build.directory}/generated-sources/xjc
                            </sourceRoot>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.sun.xml.bind</groupId>
                        <artifactId>jaxb-xjc</artifactId>
                        <version>${jaxb-xjc.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
        </dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-test</artifactId>
            <version>1.17</version>
            <type>pom</type>
        </dependency>

    </dependencies>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>

</project>
