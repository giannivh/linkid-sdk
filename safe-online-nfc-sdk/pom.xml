<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.lin-k.safe-online.client</groupId>
        <artifactId>sdk</artifactId>
        <version>2.0</version>
    </parent>

    <name>SafeOnline NFC devices SDK</name>
    <description>NFC devices SDK.</description>

    <groupId>net.lin-k.safe-online.client.sdk</groupId>
    <artifactId>safe-online-nfc-sdk</artifactId>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <testFailureIgnore>true</testFailureIgnore>
                    <!-- Have to run in 32-bit mode for Mac OS X as ccid driver does not have 64-bit mode -->
                    <argLine>-d32</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>net.lin-k.safe-online.client.sdk</groupId>
            <artifactId>safe-online-container-test</artifactId>
            <version>2.0</version>
            <type>pom</type>
        </dependency>

    </dependencies>

</project>
