<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
            <directory>target/files/jboss-${jboss.version}</directory>
			<outputDirectory>jboss</outputDirectory>
			<excludes>
				<exclude>**/jboss-saaj.jar</exclude>
				<exclude>server/all/**</exclude>
				<exclude>server/minimal/**</exclude>
				<exclude>client/**</exclude>
				<exclude>docs/**</exclude>
				<exclude>bin/probe.*</exclude>
				<exclude>bin/wsconsume.*</exclude>
				<exclude>bin/wsprovide.*</exclude>
				<exclude>bin/wsrunclient.*</exclude>
				<exclude>bin/wstools.*</exclude>
				<exclude>bin/classpath.sh</exclude>
				<exclude>bin/run.sh</exclude>
				<exclude>bin/shutdown.sh</exclude>
				<exclude>jar-versions.xml</exclude>
				<exclude>server/default/lib/jboss-jaxws.jar</exclude>
				<exclude>server/default/lib/jbossmq.jar</exclude>
				<exclude>server/default/deploy/hsqldb-ds.xml</exclude>
				<exclude>server/default/deploy/jms/**</exclude>
				<exclude> server/default/deploy/jbossws.sar/jboss-jaxws.jar 
				</exclude>
			</excludes>
		</fileSet>
		<fileSet>
            <directory>target/files/jboss-${jboss.version}/server/default/deploy/jms</directory>
            <outputDirectory>jboss/server/default/deploy</outputDirectory>
			<includes>
				<include>jms-ra.rar</include>
			</includes>
		</fileSet>
		<fileSet>
            <directory>target/files/jboss-${jboss.version}</directory>
			<outputDirectory>jboss</outputDirectory>
			<includes>
				<include>client/jbossall-client.jar</include>
			</includes>
		</fileSet>
		<fileSet>
            <directory>target/files/jboss-${jboss.version}</directory>
			<outputDirectory>jboss</outputDirectory>
			<includes>
				<include>bin/run.sh</include>
				<include>bin/shutdown.sh</include>
			</includes>
			<fileMode>0500</fileMode>
		</fileSet>
		<fileSet>
			<directory>target/classes/scripts</directory>
			<outputDirectory>scripts</outputDirectory>
			<fileMode>0500</fileMode>
		</fileSet>
		<fileSet>
			<directory>target/files/jaxws-ri/lib</directory>
			<outputDirectory>jboss/server/default/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/files</directory>
			<excludes>
				<exclude>jboss-messaging.sar/hsqldb-persistence-service.xml</exclude>
			</excludes>
			<includes>
				<include>jboss-messaging.sar/**</include>
			</includes>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>
		</fileSet>
		<fileSet>
            <directory>target/files/jboss-messaging-${jboss-messaging.version}</directory>
            <includes>
                <include>jboss-messaging.jar</include>
            </includes>
			<outputDirectory>jboss/server/default/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/classes/jboss</directory>
			<outputDirectory>jboss</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/dependency</directory>
            <excludes>
                <exclude>safe-online*</exclude>
				<exclude>org.apache.felix.fileinstall-*</exclude>
            </excludes>
			<outputDirectory>jboss/server/default/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/dependency</directory>
			<includes>
				<include>org.apache.felix.fileinstall-*</include>
			</includes>
			<outputDirectory>jboss/osgi/autostart</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/classes/osgi</directory>
			<outputDirectory>jboss/osgi</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/files/resources/hsql-safe-online-ds.xml</source>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>
		</file>
		<file>
			<source>target/files/ssl.jks</source>
			<outputDirectory>jboss/server/default/conf</outputDirectory>
		</file>
	</files>
</assembly>
