<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.0</version>
	</parent>

	<name>SafeOnline Performance Scenario Deploy</name>
    <description>
        SafeOnline Deployable Scenario Package.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-performance-scenario-deploy</artifactId>
	<version>1.0</version>
	<packaging>ear</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>1.4</version>
					<modules>
                        <jarModule>
                            <groupId>org.slf4j</groupId>
                            <artifactId>slf4j-api</artifactId>
                            <includeInApplicationXml>
                                true
                            </includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>org.slf4j</groupId>
                            <artifactId>
                                slf4j-log4j12
                            </artifactId>
                            <includeInApplicationXml>
                                true
                            </includeInApplicationXml>
                        </jarModule>
						<jarModule>
							<groupId>commons-io</groupId>
							<artifactId>commons-io</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>commons-el</groupId>
							<artifactId>commons-el</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>commons-digester</groupId>
							<artifactId>commons-digester</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-j2ee-util
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-sdk
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-performance-keystore
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-performance-scenario-base
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-performance-entity
                            </artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-performance-entity
							</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-performance-scenario
							</artifactId>
						</ejbModule>
					</modules>
					<jboss>
						<version>4</version>
					</jboss>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-container</artifactId>
			<type>pom</type>
			<version>1.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-performance-keystore</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-el</groupId>
			<artifactId>commons-el</artifactId>
			<exclusions>
				<exclusion>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>commons-digester</groupId>
			<artifactId>commons-digester</artifactId>
			<exclusions>
				<exclusion>
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>
				<exclusion>
					<groupId>commons-collections</groupId>
