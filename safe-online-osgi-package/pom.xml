<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.3-SNAPSHOT</version>
	</parent>

	<name>SafeOnline OSGI Developer Package</name>
    <description>
        SafeOnline OSGI Developer Package.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-osgi-package</artifactId>
	<version>1.3-SNAPSHOT</version>
	<packaging>pom</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>
										net.lin-k.safe-online
									</groupId>
									<artifactId>
										safe-online-osgi-plugin-manual
									</artifactId>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${project.build.directory}/files
							</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>unpack-javadoc-osgi</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>
										net.lin-k.safe-online
									</groupId>
									<artifactId>
										safe-online-osgi
									</artifactId>
									<classifier>javadoc</classifier>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${project.build.directory}/files/javadoc-osgi
							</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>unpack-javadoc-osgi-plugin</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>
										net.lin-k.safe-online
									</groupId>
									<artifactId>
										safe-online-osgi-plugin
									</artifactId>
									<classifier>javadoc</classifier>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${project.build.directory}/files/javadoc-osgi-plugin
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>
							${basedir}/src/assembly/package.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package-zip</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi</artifactId>
			<version>1.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi</artifactId>
			<version>1.3-SNAPSHOT</version>
			<classifier>javadoc</classifier>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi-plugin</artifactId>
			<version>1.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi-plugin</artifactId>
			<version>1.3-SNAPSHOT</version>
			<classifier>javadoc</classifier>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi-plugin-manual</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>zip</type>
		</dependency>
	</dependencies>
</project>
