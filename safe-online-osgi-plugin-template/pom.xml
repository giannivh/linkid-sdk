<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>SafeOnline Template OSGI bundle</name>
	<description> SafeOnline Temlate OSGI bundle </description>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-osgi-plugin-template</artifactId>
	<version>1.1-p1-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<fork>true</fork>
				</configuration>
				<inherited>true</inherited>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Import-Package>net.link.safeonline.osgi.plugin,org.osgi.framework,!*</Import-Package>
						<Export-Package>net.link.safeonline.osgi.plugin.template</Export-Package>
						<Bundle-Activator>net.link.safeonline.osgi.plugin.template.TemplateAttributeServiceActivator</Bundle-Activator>
						<Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
						<Embed-Dependency>*;scope=compile;inline=false;artifactId=!safe-online-osgi-plugin</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi-plugin</artifactId>
			<version>1.1-p1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>1.0.1</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</project>
