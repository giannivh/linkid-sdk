<!DOCTYPE policy PUBLIC
      "-//JBoss//DTD JBOSS Security Config 3.0//EN"
      "http://www.jboss.org/j2ee/dtd/security_config.dtd">
<policy>

	<application-policy name="safe-online-owner">
		<authentication>
			<login-module
				code="org.jboss.security.auth.spi.IdentityLoginModule"
				flag="required">
				<module-option name="roles">owner</module-option>
			</login-module>
		</authentication>
	</application-policy>

</policy>
