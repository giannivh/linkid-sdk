	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-deploy</artifactId>
	<packaging>ear</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>SafeOnline Deploy</name>
	<description>SafeOnline Deployable Application Package</description>
	<build>
		<finalName>SafeOnline</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>1.4</version>
					<modules>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-common</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-demo-keystore
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-demo-ticket-keystore
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-demo-payment-keystore
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>
								org.apache.myfaces.tomahawk
							</groupId>
							<artifactId>tomahawk</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>bouncycastle</groupId>
							<artifactId>bcprov-jdk15</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>javax.el</groupId>
							<artifactId>el-api</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>el-impl</groupId>
							<artifactId>el-ri</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>commons-io</groupId>
							<artifactId>commons-io</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>commons-codec</groupId>
							<artifactId>commons-codec</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>jfree</groupId>
							<artifactId>jfreechart</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<jarModule>
							<groupId>jfree</groupId>
							<artifactId>jcommon</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-entity</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-model</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-model-beid
							</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-model-demo
							</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-startup</artifactId>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-ws-runtime
							</artifactId>
							<contextRoot>/safe-online-ws</contextRoot>
						</webModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-user</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-auth</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-user-webapp
							</artifactId>
							<contextRoot>/safe-online</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-user-service
							</artifactId>
						</sarModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-service</artifactId>
						</sarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-j2ee-util
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-oper</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-oper-webapp
							</artifactId>
							<contextRoot>/safe-online-oper</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-oper-service
							</artifactId>
						</sarModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-owner</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-owner-webapp
							</artifactId>
							<contextRoot>
								/safe-online-owner
							</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-owner-service
							</artifactId>
						</sarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-ctrl-base
							</artifactId>
							<includeInApplicationXml>
								true
							</includeInApplicationXml>
						</jarModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-auth-webapp
							</artifactId>
							<contextRoot>/safe-online-auth</contextRoot>
						</webModule>
					</modules>
					<jboss>
						<version>4</version>
						<!--
							Need to apply the patch from:
							http://jira.codehaus.org/browse/MEAR-50
							to maven-ear-plugin.
							
							<loader-repository>
							safeonline:loader=SafeOnline.ear
							</loader-repository>
							
							This does not work because of class loading 
							issues in the web applications.
						-->
					</jboss>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
		</plugins>
	</build>
