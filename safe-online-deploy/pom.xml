<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.2-SNAPSHOT</version>
	</parent>

	<name>SafeOnline Deploy</name>
    <description>
        SafeOnline Deployable Application Package.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-deploy</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>ear</packaging>

	<build>
		<finalName>SafeOnline</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>1.4</version>
					<modules>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-entity</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-model</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-startup</artifactId>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-ws-runtime </artifactId>
							<contextRoot>/safe-online-ws</contextRoot>
						</webModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-user</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-auth</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-user-webapp </artifactId>
							<contextRoot>/${safe-online.user.webapp.name}</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-user-service </artifactId>
						</sarModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-helpdesk </artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-helpdesk-webapp </artifactId>
							<contextRoot>/${safe-online.helpdesk.webapp.name}</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-helpdesk-service </artifactId>
						</sarModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-service</artifactId>
						</sarModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-oper</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-oper-webapp </artifactId>
							<contextRoot>/${safe-online.oper.webapp.name}</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-oper-service </artifactId>
						</sarModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-owner</artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-owner-webapp </artifactId>
							<contextRoot>/${safe-online.owner.webapp.name}</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-owner-service </artifactId>
						</sarModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-auth-webapp </artifactId>
							<contextRoot>/${safe-online.auth.webapp.name}</contextRoot>
						</webModule>
						<sarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-auth-service </artifactId>
						</sarModule>
						<jarModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-taglib </artifactId>
							<includeInApplicationXml>true</includeInApplicationXml>
						</jarModule>
					</modules>
					<jboss>
						<version>4</version>
						<!--
							Need to apply the patch from:
							http://jira.codehaus.org/browse/MEAR-50 to maven-ear-plugin.
							<loader-repository> safeonline:loader=SafeOnline.ear
							</loader-repository> This does not work because of class loading
							issues in the web applications.
						-->
					</jboss>
					<excludes>
						<exclude>
							<groupId>(?!^net.lin-k).*</groupId>
						</exclude>
					</excludes>
					<archive>
						<manifest>
							<mainClass> net.link.safeonline.cli.Main </mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-cli</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-cli </artifactId>
									<outputDirectory> ${project.build.directory}/SafeOnline 
									</outputDirectory>
									<includes>**/*.class,**/*.properties</includes>
								</artifactItem>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-sql-ddl </artifactId>
									<outputDirectory> ${project.build.directory}/SafeOnline 
									</outputDirectory>
									<includes>**/*.sql</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

