<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>${safe-online.version}</version>
	</parent>

	<name>SafeOnline Deploy</name>
    <description>
        SafeOnline Deployable Application Package.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-deploy</artifactId>
	<version>${safe-online.version}</version>
	<packaging>ear</packaging>

	<build>
		<finalName>SafeOnline</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>5</version>
					<jboss>
						<version>4</version>
					</jboss>
                    <defaultJavaBundleDir>lib/</defaultJavaBundleDir>
					<archive>
						<manifest>
							<mainClass> net.link.safeonline.cli.Main </mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-cli</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-cli </artifactId>
									<outputDirectory> ${project.build.directory}/SafeOnline 
									</outputDirectory>
									<includes>**/*.class,**/*.properties</includes>
								</artifactItem>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-sql-ddl </artifactId>
									<outputDirectory> ${project.build.directory}/SafeOnline 
									</outputDirectory>
									<includes>**/*.sql</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-ws-runtime</artifactId>
			<version>${safe-online.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-user-webapp</artifactId>
			<version>${safe-online.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-helpdesk-webapp</artifactId>
			<version>${safe-online.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-oper-webapp</artifactId>
			<version>${safe-online.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-owner-webapp</artifactId>
			<version>${safe-online.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-auth-webapp</artifactId>
			<version>${safe-online.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-cli</artifactId>
			<version>${safe-online.version}</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-sql-ddl</artifactId>
			<version>${safe-online.version}</version>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

</project>
