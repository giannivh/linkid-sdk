	<name>SafeOnline Deploy</name>
	<description>
		SafeOnline Deployable Application Package.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-deploy</artifactId>
	<version>1.3-SNAPSHOT</version>
	<packaging>ear</packaging>

	<build>
		<finalName>SafeOnline</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>5</version>
					<jboss>
						<version>4</version>
					</jboss>
					<defaultJavaBundleDir>lib/</defaultJavaBundleDir>
					<modules>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-startup-runtime
							</artifactId>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-ws-runtime
							</artifactId>
							<contextRoot>/${safe-online.ws.webapp.name}
							</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-auth-ws-runtime
							</artifactId>
							<contextRoot>/${safe-online.auth.ws.webapp.name}
							</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-auth-webapp
							</artifactId>
							<contextRoot>/${safe-online.auth.webapp.name}
							</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-helpdesk-webapp
							</artifactId>
							<contextRoot>/${safe-online.helpdesk.webapp.name}
							</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-oper-webapp
							</artifactId>
							<contextRoot>/${safe-online.oper.webapp.name}
							</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-owner-webapp
							</artifactId>
							<contextRoot>/${safe-online.owner.webapp.name}
							</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>safe-online-user-webapp
							</artifactId>
							<contextRoot>/${safe-online.user.webapp.name}
							</contextRoot>
						</webModule>
					</modules>
					<archive>
						<manifest>
							<mainClass>net.link.safeonline.cli.Main
							</mainClass>
						</manifest>
					</archive>

					<!--
						Exlude ZIPs. They only serve to force the deps of wars/sars to
						become transitive.
					-->
					<artifactTypeMappings>
						<artifactTypeMapping type="zip" mapping="jar" />
					</artifactTypeMappings>
					<excludes>
						<exclude>
							<groupId>^(?!net.lin-k\.).*$</groupId>
							<artifactId>^(?!jsf-impl).*$</artifactId>
						</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin
				</artifactId>
				<executions>
					<execution>
						<id>unpack-cli</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-cli </artifactId>
									<outputDirectory> ${project.build.directory}/SafeOnline
									</outputDirectory>
									<includes>**/*.class,**/*.properties
									</includes>
								</artifactItem>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-sql-ddl </artifactId>
									<outputDirectory> ${project.build.directory}/SafeOnline
									</outputDirectory>
									<includes>**/*.sql</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor> src/main/assembly/dependencies.xml </descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

