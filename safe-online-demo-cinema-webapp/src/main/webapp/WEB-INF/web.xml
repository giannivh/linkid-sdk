<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Demo Cinema Application</display-name>

	<servlet>
		<servlet-name>cinemaapp</servlet-name>
		<servlet-class>
			org.apache.wicket.protocol.http.WicketServlet
		</servlet-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>
				net.link.safeonline.demo.cinema.webapp.CinemaApplication
			</param-value>
		</init-param>
		<init-param>
			<param-name>SafeOnlineAuthenticationServiceUrl</param-name>
			<param-value>${auth.webapp.location}</param-value>
		</init-param>
		<init-param>
			<param-name>ApplicationName</param-name>
			<param-value>safe-online-demo-cinema</param-value>
		</init-param>
		<!--<init-param>
			<param-name>configuration</param-name>
			<param-value>DEPLOYMENT</param-value>
        </init-param>-->
        <context-param>
            <param-name>configuration</param-name>
            <param-value>development</param-value>
        </context-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>cinemaapp</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class> net.link.safeonline.sdk.auth.filter.LoginFilter 
		</filter-class>
	</filter>
	<filter>
		<filter-name>JAASLoginFilter</filter-name>
		<filter-class> net.link.safeonline.sdk.auth.filter.JAASLoginFilter 
		</filter-class>
		<init-param>
			<param-name>LoginContextName</param-name>
			<param-value>client-login</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>ContainerLoginFilter</filter-name>
		<filter-class>
			net.link.safeonline.sdk.auth.filter.ContainerLoginFilter 
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/login</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>JAASLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ContainerLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>
			net.link.safeonline.sdk.auth.filter.LoginFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping-->

</web-app>
