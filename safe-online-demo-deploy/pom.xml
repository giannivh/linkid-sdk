	<name>SafeOnline Demo Deploy</name>
	<description> SafeOnline Deployable Demo Application Package. 
	</description>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-demo-deploy</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>ear</packaging>
	<build>
		<finalName>SafeOnlineZDemo</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>5</version>
					<modules>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-webapp </artifactId>
							<contextRoot>/${safe-online.demo.app.webapp.name}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-ws-runtime </artifactId>
							<contextRoot>/${safe-online.demo.ws.webapp.name}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-ticket-webapp </artifactId>
							<contextRoot>/${safe-online.demo.ticket.webapp.name}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-cinema-webapp </artifactId>
							<contextRoot>/${safe-online.demo.cinema.webapp.name}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-payment-webapp </artifactId>
							<contextRoot>/${safe-online.demo.payment.webapp.name}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-lawyer-webapp </artifactId>
							<contextRoot>/${safe-online.demo.lawyer.webapp.name}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-prescription-webapp </artifactId>
							<contextRoot>/${safe-online.demo.prescription.webapp.name}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-demo-mandate-webapp </artifactId>
							<contextRoot>/${safe-online.demo.mandate.webapp.name}</contextRoot>
						</webModule>
					</modules>
					<jboss>
						<version>4</version>
					</jboss>
					<defaultJavaBundleDir>lib/</defaultJavaBundleDir>

					<!--
						Exlude ZIPs. They only serve to force the deps of wars to become
						transitive.
					-->
					<artifactTypeMappings>
						<artifactTypeMapping type="zip" mapping="jar" />
					</artifactTypeMappings>
					<earSourceExcludes>*.zip,lib/*.zip</earSourceExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor> src/main/assembly/dependencies.xml </descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
