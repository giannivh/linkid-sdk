<?xml version="1.0" encoding="UTF-8"?>
<!-- vi:set ts=4 sw=4 noexpandtab: -->

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>SafeOnline Demo Ticket Web Application</display-name>

    <!-- Application Context Parameters -->
	<context-param>
		<param-name>WebappPath</param-name>
        <param-value>/${safe-online.demo.ticket.webapp.url}/</param-value>
	</context-param>
	<context-param>
		<description>Path used to initiate a login process.</description>
		<param-name>AuthenticationServicePath</param-name>
		<param-value>/entry</param-value>
	</context-param>
	<context-param>
		<description>Path used to initiate a single logout process.</description>
		<param-name>LogoutServicePath</param-name>
		<param-value>/logoutentry</param-value>
	</context-param>
	<context-param>
		<description>Path used to finalize a logout request sent by the authentication webapp following a single logout process by another application.</description>
		<param-name>LogoutExitServicePath</param-name>
		<param-value>/logoutexit</param-value>
	</context-param>
	<context-param>
		<param-name>ApplicationName</param-name>
		<param-value>${safe-online.demo.ticket.webapp.name}</param-value>
	</context-param>
	<context-param>
		<param-name>AuthenticationProtocol</param-name>
		<param-value>SAML2_BROWSER_POST</param-value>
	</context-param>
	<context-param>
		<param-name>KeyStoreResource</param-name>
		<param-value>safe-online-demo-ticket-keystore.jks</param-value>
	</context-param>
	<context-param>
		<param-name>KeyStoreType</param-name>
		<param-value>jks</param-value>
	</context-param>
	<context-param>
		<param-name>KeyStorePassword</param-name>
		<param-value>secret</param-value>
	</context-param>
	<context-param>
		<param-name>SingleSignOnEnabled</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<description>Landing page to finalize a login process.</description>
		<param-name>LandingPage</param-name>
		<param-value>/login</param-value>
	</context-param>
	<context-param>
		<description>Landing page to finalize a logout process.</description>
		<param-name>LogoutLandingPage</param-name>
		<param-value>/logout</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>client</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>
	<context-param>
		<param-name>facelets.DEVELOPMENT</param-name>
		<param-value>${debug.mode}</param-value>
	</context-param>
	<context-param>
		<param-name>org.jboss.seam.core.init.debug</param-name>
		<param-value>${debug.mode}</param-value>
	</context-param>

    <!-- Application Filter Definitions And Mappings -->
	<filter>
		<filter-name>AuthnResponseFilter</filter-name>
		<filter-class>net.link.safeonline.sdk.auth.filter.AuthnResponseFilter</filter-class>
	</filter>
	<filter>
		<filter-name>Seam Filter</filter-name>
		<filter-class>org.jboss.seam.servlet.SeamFilter</filter-class>
	</filter>
	<filter>
		<filter-name>JAASLoginFilter</filter-name>
		<filter-class>net.link.safeonline.sdk.auth.filter.JAASLoginFilter</filter-class>

		<init-param>
			<param-name>LoginContextName</param-name>
			<param-value>client-login</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>ContainerLoginFilter</filter-name>
		<filter-class>net.link.safeonline.sdk.auth.filter.ContainerLoginFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>Seam Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthnResponseFilter</filter-name>
		<url-pattern>*.seam</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>JAASLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ContainerLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

    <!-- Application Event Listeners -->
	<listener>
		<listener-class>org.jboss.seam.servlet.SeamListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.sun.faces.config.ConfigureListener</listener-class>
	</listener>

    <!-- Application Servlet Definitions And Mappings -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>TicketServlet</servlet-name>
		<servlet-class>net.link.safeonline.demo.ticket.servlet.TicketServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AuthLoginServlet</servlet-name>
		<servlet-class>net.link.safeonline.sdk.auth.servlet.LoginServlet</servlet-class>

		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error.seam</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>AuthLogoutServlet</servlet-name>
		<servlet-class>net.link.safeonline.sdk.auth.servlet.LogoutServlet</servlet-class>

		<init-param>
			<param-name>LogoutPath</param-name>
			<param-value>/ticketlogout</param-value>
		</init-param>
		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error.seam</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>TicketLogoutServlet</servlet-name>
		<servlet-class>net.link.safeonline.demo.ticket.servlet.LogoutServlet</servlet-class>

		<init-param>
			<param-name>LogoutExitPath</param-name>
			<param-value>/logout</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>Style Servlet</servlet-name>
		<servlet-class>net.link.safeonline.webapp.resources.ApplicationStyleServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.seam</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TicketServlet</servlet-name>
		<url-pattern>/TicketServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthLoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthLogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TicketLogoutServlet</servlet-name>
		<url-pattern>/ticketlogout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Style Servlet</servlet-name>
		<url-pattern>/theme.css</url-pattern>
	</servlet-mapping>

    <!-- Application Session Configuration -->
	<session-config>
		<session-timeout>${sessionTimeout}</session-timeout>
	</session-config>

</web-app>
