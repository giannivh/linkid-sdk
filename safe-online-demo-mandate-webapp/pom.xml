<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>${safe-online.version}</version>
	</parent>

	<name>SafeOnline Demo Mandate Web Application</name>
	<description>
		Demo Mandate Web Application using SafeOnline.
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-demo-mandate-webapp</artifactId>
	<version>${safe-online.version}</version>
	<packaging>war</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
                    <warSourceExcludes>WEB-INF/lib/*.jar</warSourceExcludes>
                    <archive>
                      <manifest>
                        <addClasspath>true</addClasspath>
                        <classpathPrefix>lib/</classpathPrefix>
                      </manifest>
                    </archive>

					<webResources>
						<resource>
							<directory>
								${basedir}/src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Dependency Groups -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-as</artifactId>
            <type>pom</type>
        </dependency>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-sdk</artifactId>
			<version>${safe-online.version}</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-demo-mandate</artifactId>
			<version>${safe-online.version}</version>
			<type>ejb-client</type>
		</dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-test</artifactId>
            <type>pom</type>
        </dependency>

	</dependencies>

</project>
