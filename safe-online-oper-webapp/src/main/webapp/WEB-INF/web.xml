<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>Olas Operator Web Application</display-name>

    <!-- Application Context Parameters -->
	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>client</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>
	<context-param>
		<param-name>facelets.DEVELOPMENT</param-name>
		<param-value>${debug.mode}</param-value>
	</context-param>
	<context-param>
		<param-name>org.jboss.seam.core.init.debug</param-name>
		<param-value>${debug.mode}</param-value>
	</context-param>
	<context-param>
		<description>URL used to initiate a login process.</description>
		<param-name>AuthenticationServiceUrl</param-name>
		<param-value>/entry</param-value>
	</context-param>
	<context-param>
		<description>URL used to initiate a single logout process.</description>
		<param-name>LogoutServiceUrl</param-name>
		<param-value>/logoutentry</param-value>
	</context-param>
	<context-param>
		<description>URL used to finalize a logout request sent by the authentication webapp following a single logout process by another application.</description>
		<param-name>LogoutExitServiceUrl</param-name>
		<param-value>/logoutexit</param-value>
	</context-param>
	<context-param>
		<param-name>ApplicationName</param-name>
		<param-value>${safe-online.oper.webapp.name}</param-value>
	</context-param>
	<context-param>
		<param-name>ApplicationColor</param-name>
		<param-value>#2c0075</param-value>
	</context-param>
	<context-param>
		<param-name>AuthenticationProtocol</param-name>
		<param-value>SAML2_BROWSER_POST</param-value>
	</context-param>
	<context-param>
		<param-name>KeyStoreResource</param-name>
		<param-value>safe-online-oper-keystore.jks</param-value>
	</context-param>
	<context-param>
		<param-name>KeyStoreType</param-name>
		<param-value>jks</param-value>
	</context-param>
	<context-param>
		<param-name>KeyStorePassword</param-name>
		<param-value>secret</param-value>
	</context-param>
	<context-param>
		<param-name>SingleSignOnEnabled</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>CommercialName</param-name>
		<param-value>${safe-online.commercial.name}</param-value>
	</context-param>
	<context-param>
		<description>Landing page to finalize a login process.</description>
		<param-name>LandingPage</param-name>
		<param-value>/login</param-value>
	</context-param>
	<context-param>
		<description>Landing page to finalize a logout process.</description>
		<param-name>LogoutLandingPage</param-name>
		<param-value>/logout</param-value>
	</context-param>

    <!-- Application Filter Definitions And Mappings -->
	<filter>
		<filter-name>Seam Filter</filter-name>
		<filter-class>org.jboss.seam.servlet.SeamFilter</filter-class>
	</filter>
	<filter>
		<filter-name>ServletLoginFilter</filter-name>
		<filter-class>net.link.safeonline.webapp.filter.ServletLoginFilter</filter-class>
	</filter>
	<filter>
		<filter-name>ExceptionFilter</filter-name>
		<filter-class>net.link.safeonline.webapp.filter.ExceptionFilter</filter-class>

		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>/error.seam</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>TimeoutFilter</filter-name>
		<filter-class>net.link.safeonline.webapp.filter.TimeoutFilter</filter-class>

		<init-param>
			<param-name>TimeoutPath</param-name>
			<param-value>/timeout.seam</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>AuthnResponseFilter</filter-name>
		<filter-class>net.link.safeonline.sdk.auth.filter.AuthnResponseFilter</filter-class>
	</filter>
	<filter>
		<filter-name>JAASLoginFilter</filter-name>
		<filter-class>net.link.safeonline.sdk.auth.filter.JAASLoginFilter</filter-class>

		<init-param>
			<param-name>LoginContextName</param-name>
			<param-value>client-login</param-value>
		</init-param>
		<init-param>
			<param-name>LoginPath</param-name>
			<param-value>/${safe-online.oper.webapp.name}/main.seam</param-value>
		</init-param>
		<init-param>
			<param-name>UnauthenticatedPath.1</param-name>
			<param-value>/${safe-online.oper.webapp.name}/language.seam</param-value>
		</init-param>
		<init-param>
			<param-name>UnauthenticatedPath.2</param-name>
			<param-value>/${safe-online.oper.webapp.name}/protocol-error.seam</param-value>
		</init-param>
		<init-param>
			<param-name>UnauthenticatedPath.3</param-name>
			<param-value>/${safe-online.oper.webapp.name}/error.seam</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<filter-class>org.apache.myfaces.webapp.filter.ExtensionsFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>ExceptionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>TimeoutFilter</filter-name>
		<url-pattern>*.seam</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>TimeoutFilter</filter-name>
		<url-pattern>/login</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthnResponseFilter</filter-name>
		<url-pattern>*.seam</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>JAASLoginFilter</filter-name>
		<url-pattern>*.seam</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>JAASLoginFilter</filter-name>
		<servlet-name>Chart Servlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>JAASLoginFilter</filter-name>
		<servlet-name>Export Servlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Seam Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ServletLoginFilter</filter-name>
		<url-pattern>*.seam</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<url-pattern>*.seam</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<url-pattern>/faces/myFacesExtensionResource/*</url-pattern>
	</filter-mapping>

    <!-- Application Event Listeners -->
	<listener>
		<listener-class>org.jboss.seam.servlet.SeamListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.sun.faces.config.ConfigureListener</listener-class>
	</listener>

    <!-- Application Servlet Definitions And Mappings -->
	<servlet>
		<servlet-name>Logo Servlet</servlet-name>
		<servlet-class>net.link.safeonline.webapp.resources.ApplicationLogoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>Seam Resource Servlet</servlet-name>
		<servlet-class>org.jboss.seam.servlet.ResourceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>net.link.safeonline.sdk.auth.servlet.LoginServlet</servlet-class>

		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error.seam</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>net.link.safeonline.sdk.auth.servlet.LogoutServlet</servlet-class>

		<init-param>
			<param-name>LogoutUrl</param-name>
			<param-value>/operlogout</param-value>
		</init-param>
		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error.seam</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>OperLogoutServlet</servlet-name>
		<servlet-class>net.link.safeonline.webapp.resources.LogoutServlet</servlet-class>

		<init-param>
			<param-name>LogoutExitUrl</param-name>
			<param-value>/logout</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>Style Servlet</servlet-name>
		<servlet-class>net.link.safeonline.webapp.resources.ApplicationStyleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Chart Servlet</servlet-name>
		<servlet-class>net.link.safeonline.webapp.resources.ChartServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>Export Servlet</servlet-name>
		<servlet-class>net.link.safeonline.webapp.resources.ExportServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OperLogoutServlet</servlet-name>
		<url-pattern>/operlogout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logo Servlet</servlet-name>
		<url-pattern>/logo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.seam</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Seam Resource Servlet</servlet-name>
		<url-pattern>/seam/resource/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Style Servlet</servlet-name>
		<url-pattern>/theme.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Chart Servlet</servlet-name>
		<url-pattern>*.chart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Export Servlet</servlet-name>
		<url-pattern>*.xls</url-pattern>
	</servlet-mapping>

    <!-- Application Session Configuration -->
	<session-config>
		<session-timeout>${sessionTimeout}</session-timeout>
	</session-config>

    <!-- Application Error Pages -->
	<error-page>
		<error-code>400</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>406</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>407</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>408</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>409</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>410</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>411</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>412</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>413</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>414</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>415</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>416</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>417</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>501</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>502</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/error.seam</location>
	</error-page>
	<error-page>
		<error-code>504</error-code>
		<location>/error.seam</location>
	</error-page>

    <!-- Application Security Configuration -->
	<security-constraint>
		<display-name>Restrict Viewing XHTML Documents</display-name>

		<web-resource-collection>
			<web-resource-name>XHTML</web-resource-name>
			<url-pattern>*.xhtml</url-pattern>
		</web-resource-collection>
        <auth-constraint />
	</security-constraint>

	<security-role>
		<description>The Operator User Role</description>
		<role-name>operator</role-name>
	</security-role>
	<security-role>
		<description>The Global Operator User Role</description>
		<role-name>operator-global</role-name>
	</security-role>

</web-app>
