<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">

	<formats>
		<format>zip</format>
	</formats>

	<fileSets>

		<!-- Include only the base HSQL configuration. -->
		<fileSet>
			<directory>target/files/safe-online-base-distribution-${safe-online.version}/jboss</directory>
			<outputDirectory>jboss</outputDirectory>
            <includes>
				<include>server/default/deploy/jms/hsqldb-jdbc2-service.xml</include>
				<include>server/default/conf/jboss-minimal.xml</include>
                <include>server/default/deploy/jboss-messaging.sar/hsqldb-persistence-service.xml</include>
                <include>server/default/deploy/hsql-safe-online-ds.xml</include>
                <include>server/default/deploy/hsqldb-ds.xml</include>
                <include>server/default/lib/hsqldb.jar</include>
                <include>server/default/lib/hsqldb-plugin.jar</include>
				<include>server/default/deploy/jms/hsqldb-jdbc-state-service.xml</include>
            </includes>
		</fileSet>

		<!-- Exclude nothing: Pilot-Distribution already exludes it all. -->
		<fileSet>
			<directory>target/files/safe-online-pilot-distribution-${safe-online.version}/jboss</directory>
			<outputDirectory>jboss</outputDirectory>
		</fileSet>

		<!-- Runtime scripts                                -> /scripts -->
		<fileSet>
			<directory>target/files/safe-online-pilot-distribution-${safe-online.version}/scripts</directory>
			<outputDirectory>scripts</outputDirectory>
			<fileMode>0500</fileMode>
		</fileSet>

		<!-- This artifact's custom JBoss configuration     -> /jboss -->
		<fileSet>
			<directory>target/classes/jboss</directory>
			<outputDirectory>jboss</outputDirectory>
		</fileSet>

		<!-- This artifact's EAR dependencies               -> /jboss/server/default/lib -->
		<fileSet>
			<directory>target/deploy</directory>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>
		</fileSet>

        <!-- This artifact's non-EAR dependencies           -> jboss/server/default/lib -->
		<fileSet>
			<directory>target/dependency</directory>
			<outputDirectory>jboss/server/default/lib</outputDirectory>
		</fileSet>

	</fileSets>

	<files>
        <!-- The DS configuration                           -> /jboss/server/default/deploy -->
		<file>
			<source>target/files/resources/hsql-safe-online-ds.xml</source>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>
		</file>
	</files>

</assembly>
