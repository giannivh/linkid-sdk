<?xml version="1.0" encoding="UTF-8"?>
<policy xmlns="urn:jboss:security-config:4.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:jboss:security-config:4.1 resource:security-config_4_1.xsd"
	version="4.1">

	<application-policy name="safe-online-demo">
		<authentication>
			<login-module
				code="net.link.safeonline.sdk.auth.jaas.SafeOnlineAuthenticationLoginModule"
				flag="required">
				<module-option name="location">
					localhost:8080
				</module-option>
				<module-option name="application-name">
					demo-application
				</module-option>
			</login-module>
			<login-module
				code="org.jboss.security.auth.spi.IdentityLoginModule"
				flag="optional">
				<module-option name="password-stacking">
					useFirstPass
				</module-option>
				<module-option name="roles">WebAppUser</module-option>
			</login-module>
		</authentication>
	</application-policy>

	<application-policy name="demo-ticket">
		<authentication>
			<login-module
				code="org.jboss.security.auth.spi.IdentityLoginModule"
				flag="required">
				<module-option name="roles">user</module-option>
			</login-module>
		</authentication>
	</application-policy>

	<application-policy name="demo-payment">
		<authentication>
			<login-module
				code="org.jboss.security.auth.spi.IdentityLoginModule"
				flag="required">
				<module-option name="roles">user</module-option>
			</login-module>
		</authentication>
	</application-policy>

</policy>
