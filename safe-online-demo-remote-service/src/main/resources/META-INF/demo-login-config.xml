<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policy PUBLIC
      "-//JBoss//DTD JBOSS Security Config 3.0//EN"
      "http://www.jboss.org/j2ee/dtd/security_config.dtd">
<policy>

	<application-policy name="safe-online-demo">
		<authentication>
			<login-module
				code="net.link.safeonline.sdk.auth.jaas.SafeOnlineAuthenticationLoginModule"
				flag="required">
				<module-option name="location">
					localhost:8080
				</module-option>
				<module-option name="application-name">
					demo-application
				</module-option>
			</login-module>
			<login-module
				code="org.jboss.security.auth.spi.IdentityLoginModule"
				flag="optional">
				<module-option name="password-stacking">
					useFirstPass
				</module-option>
				<module-option name="roles">WebAppUser</module-option>
			</login-module>
		</authentication>
	</application-policy>

	<application-policy name="demo-ticket">
		<authentication>
			<login-module
				code="org.jboss.security.auth.spi.IdentityLoginModule"
				flag="required">
				<module-option name="roles">user</module-option>
			</login-module>
		</authentication>
	</application-policy>

	<application-policy name="demo-payment">
		<authentication>
			<login-module
				code="org.jboss.security.auth.spi.IdentityLoginModule"
				flag="required">
				<module-option name="roles">user</module-option>
			</login-module>
		</authentication>
	</application-policy>

</policy>
