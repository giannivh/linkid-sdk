	<name>SafeOnline Option Connection Manager</name>

	<modelVersion>4.0.0</modelVersion>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-option-connection-manager</artifactId>
	<version>1.2-SNAPSHOT</version>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass> net.link.safeonline.option.connection.manager.Main 
							</mainClass>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Sepecific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-option-device</artifactId>
			<version>1.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-option-connection-manager-ws</artifactId>
			<version>1.2-SNAPSHOT</version>
		</dependency>

        <!-- Sepecific Dependencies: External -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
		</dependency>

	</dependencies>

</project>
