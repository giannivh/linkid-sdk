<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-demo-webapp</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>SafeOnline Demo Web Application</name>
	<description>
		Demonstrates web application login via SafeOnline.
	</description>
	<profiles>
		<profile>
			<id>env-dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<auth.webapp.location>
					http://localhost:8080/safe-online-auth/
				</auth.webapp.location>
			</properties>
		</profile>
		<profile>
			<id>env-buildserver</id>
			<activation>
				<property>
					<name>env</name>
					<value>buildserver</value>
				</property>
			</activation>
			<properties>
				<auth.webapp.location>
					http://buildserver:8080/safe-online-auth/
				</auth.webapp.location>
			</properties>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0.3-safe-online</version>
				<configuration>
					<!-- http://jira.codehaus.org/browse/MWAR-18 -->
					<dependencies>
						<dependency>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-demo-applet
							</artifactId>
							<targetFilename>
								safe-online-demo-applet.jar
							</targetFilename>
							<targetPath>/</targetPath>
						</dependency>
					</dependencies>
					<webResources>
						<resource>
							<directory>
								src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-container</artifactId>
			<type>pom</type>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-demo-applet</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>changes-maven-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
</project>
