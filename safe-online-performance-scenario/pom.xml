<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>safe-online</artifactId>
        <groupId>net.lin-k</groupId>
        <version>1.1-p1-SNAPSHOT</version>
    </parent>

    <name>SafeOnline Performance Scenario</name>
    <description>
        Scenario for testing SafeOnline's performance.
    </description>

    <groupId>net.lin-k.safe-online</groupId>
    <artifactId>safe-online-performance-scenario</artifactId>
    <version>1.1-p1-SNAPSHOT</version>
    <packaging>ejb</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-ejb-plugin</artifactId>
                <configuration>
                    <ejbVersion>3.0</ejbVersion>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                        </manifest>
                    </archive>
                    <generateClient>true</generateClient>
                    <clientIncludes>
                        <clientInclude>**/ExecutionMetadata.class</clientInclude>
                        <clientInclude>**/ScenarioController.class</clientInclude>
                    </clientIncludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container</artifactId>
            <version>1.1-p1-SNAPSHOT</version>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-performance-entity</artifactId>
            <version>1.1-p1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-performance-scenario-base</artifactId>
            <version>1.1-p1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-model-performance</artifactId>
            <version>1.1-p1-SNAPSHOT</version>
            <type>ejb-client</type>
            <exclusions>
                <exclusion>
                    <groupId>net.lin-k.safe-online</groupId>
                    <artifactId>safe-online-model</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-performance-keystore</artifactId>
            <version>1.1-p1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging-api</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>javax.servlet</groupId>
                    <artifactId>servlet-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>jgroups</groupId>
            <artifactId>jgroups</artifactId>
        </dependency>
        <dependency>
            <groupId>jfree</groupId>
            <artifactId>jfreechart</artifactId>
        </dependency>
        <dependency>
            <groupId>jfree</groupId>
            <artifactId>jcommon</artifactId>
        </dependency>

    </dependencies>

    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-changes-plugin</artifactId>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>changes-report</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>

</project>
