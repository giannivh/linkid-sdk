<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>${safe-online.version}</version>
	</parent>

	<name>SafeOnline Encap Deploy</name>
    <description>
        SafeOnline Deployable Encap Application Package .
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-encap-deploy</artifactId>
	<version>${safe-online.version}</version>
	<packaging>ear</packaging>

	<build>
		<finalName>SafeOnlineEncap</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>5</version>
					<jboss>
						<version>4</version>
					</jboss>
                    <defaultJavaBundleDir>lib/</defaultJavaBundleDir>

                    <!-- Exlude ZIPs.
                         They only serve to force the deps of wars/sars to become transitive. -->
                    <artifactTypeMappings>
                        <artifactTypeMapping type="zip" mapping="jar"/>
                    </artifactTypeMappings>
                    <earSourceExcludes>*.zip,lib/*.zip</earSourceExcludes>

					<!--version>1.4</version>
					<modules>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-model-encap </artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-encap </artifactId>
						</ejbModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-encap-startup </artifactId>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId> safe-online-encap-webapp </artifactId>
							<contextRoot>/${safe-online.encap.webapp.name}</contextRoot>
						</webModule>
					</modules>
					<excludes>
						<exclude>
							<groupId>(?!^net.lin-k).*</groupId>
						</exclude>
					</excludes>
					<jboss>
						<version>4</version>
					</jboss-->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor> src/main/assembly/dependencies.xml </descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Specific Dependencies: OLAS: Forced Dependency Transition -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-encap-webapp</artifactId>
			<version>${safe-online.version}</version>
			<type>war</type>
		</dependency>
            <dependency>
                <groupId>net.lin-k.safe-online</groupId>
                <artifactId>safe-online-encap-webapp</artifactId>
                <version>${safe-online.version}</version>
                <type>zip</type>
            </dependency>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-model-encap</artifactId>
			<version>${safe-online.version}</version>
			<type>ejb</type>
			<exclusions>
				<exclusion>
					<groupId>net.lin-k.safe-online</groupId>
					<artifactId>safe-online-model</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-encap</artifactId>
			<version>${safe-online.version}</version>
			<type>ejb</type>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

</project>
