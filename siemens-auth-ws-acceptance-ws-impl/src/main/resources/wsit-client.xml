<?xml version="1.0" encoding="UTF-8"?>
<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://schemas.xmlsoap.org/wsdl/"
	xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/" targetNamespace="urn:net:lin-k:siemens:metro"
	xmlns:tns="urn:net:lin-k:siemens:metro" xmlns:wsp="http://schemas.xmlsoap.org/ws/2004/09/policy"
	xmlns:sp="http://schemas.xmlsoap.org/ws/2005/07/securitypolicy"
	xmlns:wspp="http://java.sun.com/xml/ns/wsit/policy"
	xmlns:wsu="http://docs.oasis-open.org/wss/2004/01/oasis-200401-wss-wssecurity-utility-1.0.xsd"
	name="SiemensWSAuthenticationService">

	<message name="RequestMessage">
		<part name="request" element="tns:Request" />
	</message>
	<message name="ResponseMessage">
		<part name="result" element="tns:Response" />
	</message>

	<portType name="SiemensWSAuthenticationServicePort">
		<operation name="getAttribute">
			<input message="tns:RequestMessage" />
			<output message="tns:ResponseMessage" />
		</operation>
	</portType>

	<binding name="SiemensWSAuthenticationServiceBinding" type="tns:SiemensWSAuthenticationServicePort">
		<soap:binding style="document"
			transport="http://schemas.xmlsoap.org/soap/http" />
		<wsp:PolicyReference URI="#SamlPolicy" />
		<operation name="getAttribute">
			<soap:operation soapAction="getAttribute" />
			<input>
				<soap:body use="literal" />
			</input>
			<output>
				<soap:body use="literal" />
			</output>
		</operation>
	</binding>

	<service name="SiemensWSAuthenticationService">
		<port name="SiemensWSAuthenticationServicePort" binding="tns:SiemensWSAuthenticationServiceBinding">
			<soap:address location="http://localhost:8080/siemens-ws/auth/" />
		</port>
	</service>

	<!-- Policy definitions -->
	<wsp:Policy wsu:Id="SamlPolicy">
		<wsp:ExactlyOne>
			<wsp:All>
				<sc:CallbackHandlerConfiguration
					xmlns:sc="http://schemas.sun.com/2006/03/wss/client">
					<sc:CallbackHandler name="samlHandler"
						classname="net.link.safeonline.siemens.acceptance.ws.auth.client.SamlCallbackHandler" />
				</sc:CallbackHandlerConfiguration>

			</wsp:All>
		</wsp:ExactlyOne>
	</wsp:Policy>
</definitions>
