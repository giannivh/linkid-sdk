<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>safe-online</artifactId>
		<groupId>net.lin-k</groupId>
		<version>1.2</version>
	</parent>

	<name>SafeOnline Demo Distribution</name>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-demo-distribution</artifactId>
	<version>1.2</version>
	<packaging>pom</packaging>

	<build>
		<resources>
			<resource>
				<directory>src/main</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>filter</id>
						<phase>process-resources</phase>
						<goals>
							<goal>resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-base-distribution </artifactId>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory> ${project.build.directory}/files 
							</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-deploy </artifactId>
									<type>ear</type>
								</artifactItem>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-demo-deploy </artifactId>
									<type>ear</type>
								</artifactItem>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-beid-deploy </artifactId>
									<type>ear</type>
								</artifactItem>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-encap-deploy </artifactId>
									<type>ear</type>
								</artifactItem>
								<artifactItem>
									<groupId> net.lin-k.safe-online </groupId>
									<artifactId> safe-online-digipass-deploy </artifactId>
									<type>ear</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory> ${project.build.directory}/files 
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor> src/main/assembly/jboss.xml </descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-base-distribution</artifactId>
			<version>1.2</version>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-deploy</artifactId>
			<version>1.2</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-demo-deploy</artifactId>
			<version>1.2</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-beid-deploy</artifactId>
			<version>1.2</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-encap-deploy</artifactId>
			<version>1.2</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-digipass-deploy</artifactId>
			<version>1.2</version>
			<type>ear</type>
		</dependency>
	</dependencies>

</project>
