<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.4-SNAPSHOT</version>
	</parent>

	<name>SafeOnline Operator Beans</name>
    <description>
        The SafeOnline Operator EJB3 Seam Backing Beans. 
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-oper</artifactId>
	<version>1.4-SNAPSHOT</version>
	<packaging>ejb</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<configuration>
					<ejbVersion>3.0</ejbVersion>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
					<generateClient>true</generateClient>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Dependency Groups -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-as</artifactId>
            <version>1.4-SNAPSHOT</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-jsf</artifactId>
            <version>1.4-SNAPSHOT</version>
            <type>pom</type>
        </dependency>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-model-client</artifactId>
			<version>1.4-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-common</artifactId>
			<version>1.4-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-j2ee-util</artifactId>
			<version>1.4-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-ctrl-base</artifactId>
			<version>1.4-SNAPSHOT</version>
		</dependency>

        <!-- Specific Dependencies: External -->
        <dependency>
            <groupId>jmimemagic</groupId>
            <artifactId>jmimemagic</artifactId>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
        </dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-test</artifactId>
            <version>1.4-SNAPSHOT</version>
            <type>pom</type>
        </dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>

</project>
