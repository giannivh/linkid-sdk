<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="AgentEntityManager">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>
			java:/${safe-online.profiling.agent.data.source}
		</jta-data-source>
		<properties>
			<property name="hibernate.dialect"
				value="${safe-online.profiling.agent.dialect}" />
			<property name="hibernate.show_sql"
				value="${safe-online.profiling.agent.show.sql}" />
			<property name="hibernate.hbm2ddl.auto"
				value="${safe-online.profiling.agent.hibernate.hbm2ddl.auto}" />
			<property name="hibernate.use_sql_comments" value="true" />
			<property name="hibernate.bytecode.use_reflection_optimizer"
				value="true" />
			<property name="hibernate.cache.provider_class"
				value="org.hibernate.cache.HashtableCacheProvider" />
		</properties>
	</persistence-unit>
</persistence>
