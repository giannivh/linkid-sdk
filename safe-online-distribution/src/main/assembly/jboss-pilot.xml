<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">




    <!-- =================== -->
    <!-- PILOT CONFIGURATION -->
    <!-- =================== -->


    <files>

        <!-- The manuals                                    -> /jboss -->
       <file>
           <source>target/files/install-manual.pdf</source>
           <outputDirectory>jboss/</outputDirectory>
       </file>
       <file>
           <source>target/files/maintenance-manual.pdf</source>
           <outputDirectory>jboss/</outputDirectory>
       </file>




    <!-- ================== -->
    <!-- BASE CONFIGURATION -->
    <!-- ================== -->

        <!-- Link's HTTPS certificate                       -> /jboss/server/default/conf -->
		<file>
			<source>target/files/ssl.jks</source>
			<outputDirectory>jboss/server/default/conf</outputDirectory>
		</file>

        <!-- The DS configuration                           -> /jboss/server/default/deploy -->
		<file>
            <source>target/files/resources/safe-online-ds.xml</source>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>
		</file>

	</files>

	<fileSets>

        <!-- Exclude All & Minimal configs, useless scripts, client jars & docs, DS config, JBossMQ & bundled JaxWS. -->
		<fileSet>
			<directory>target/files/jboss-${jboss.version}</directory>
			<outputDirectory>jboss</outputDirectory>

			<excludes>
				<exclude>**/jboss-saaj.jar</exclude>
				<exclude>server/all/**</exclude>
				<exclude>server/minimal/**</exclude>
				<exclude>client/**</exclude>
				<exclude>docs/**</exclude>
				<exclude>bin/probe.*</exclude>
				<exclude>bin/wsconsume.*</exclude>
				<exclude>bin/wsprovide.*</exclude>
				<exclude>bin/wsrunclient.*</exclude>
				<exclude>bin/wstools.*</exclude>
				<exclude>bin/*.sh</exclude>
				<exclude>jar-versions.xml</exclude>
				<exclude>server/default/lib/jbossmq.jar</exclude>
				<exclude>server/default/lib/jboss-jaxws.jar</exclude>
				<exclude>server/default/conf/jboss-minimal.xml</exclude>
				<exclude>server/default/deploy/jms/**</exclude>
				<exclude>server/default/deploy/hsqldb-ds.xml</exclude>
				<exclude>server/default/deploy/jbossws.sar/jboss-jaxws.jar</exclude>

                <!-- Exclude the default HSQL configuration. -->
				<exclude>server/default/deploy/hsql-safe-online-ds.xml</exclude>
				<exclude>server/default/deploy/jboss-messaging.sar/hsqldb-persistence-service.xml</exclude>
				<exclude>server/default/lib/hsqldb.jar</exclude>
				<exclude>server/default/lib/hsqldb-plugin.jar</exclude>

                <!-- Exclude some JBoss AS features we want disabled in PILOT. -->
                <exclude>server/default/lib/autonumber-plugin.jar</exclude>
                <exclude>server/default/lib/properties-plugin.jar</exclude>
                <exclude>server/default/lib/jboss-monitoring.jar</exclude>
                <exclude>server/default/lib/scheduler-plugin.jar</exclude>
                <exclude>server/default/lib/scheduler-plugin-example.jar</exclude>
                <exclude>server/default/conf/props/*.properties</exclude>
                <exclude>server/default/conf/xmdesc/JNDIView-xmbean.xml</exclude>
                <exclude>server/default/deploy/management/**</exclude>
                <exclude>server/default/deploy/jmx-invoker-service.xml</exclude>
                <exclude>server/default/deploy/jmx-console.war/**</exclude>
                <exclude>server/default/deploy/http-invoker.sar/**</exclude>
                <exclude>server/default/deploy/uuid-key-generator.sar/**</exclude>
                <exclude>server/default/deploy/jboss-web.deployer/ROOT.war/**</exclude>
                <exclude>server/default/deploy/jbossws.sar/jbossws-context.war</exclude>
                <exclude>server/default/deploy/bsh-deployer.xml</exclude>
                <exclude>server/default/deploy/mail-service.xml</exclude>
                <exclude>server/default/deploy/scheduler-service.xml</exclude>
                <exclude>server/default/deploy/monitoring-service.xml</exclude>
                <exclude>server/default/deploy/properties-service.xml</exclude>
                <exclude>server/default/deploy/client-deployer-service.xml</exclude>
                <exclude>server/default/deploy/schedule-manager-service.xml</exclude>
                <exclude>server/default/deploy/cache-invalidation-service.xml</exclude>
			</excludes>
		</fileSet>

        <!-- Re-include some things we do need, like jms-ra.rar & jbossall-client.jar -->
		<fileSet>
			<directory>target/files/jboss-${jboss.version}/server/default/deploy/jms</directory>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>

			<includes>
				<include>jms-ra.rar</include>
			</includes>
        </fileSet>
		<fileSet>
			<directory>target/files/jboss-${jboss.version}</directory>
			<outputDirectory>jboss</outputDirectory>

			<includes>
				<include>client/jbossall-client.jar</include>
			</includes>
		</fileSet>
		<!--fileSet>
			<directory>target/files/jboss-${jboss.version}</directory>
			<outputDirectory>jboss</outputDirectory>

			<includes>
				<include>bin/run.sh</include>
				<include>bin/shutdown.sh</include>
			</includes>
			<fileMode>0500</fileMode>
		</fileSet-->
		<fileSet>
			<directory>target/classes/scripts</directory>
			<outputDirectory>scripts</outputDirectory>

			<fileMode>0500</fileMode>
		</fileSet>

        <!-- External JaxWS lib to replace bundled JaxWS    -> /jboss/server/default/lib -->
		<fileSet>
			<directory>target/files/jaxws-ri/lib</directory>
			<outputDirectory>jboss/server/default/lib</outputDirectory>
		</fileSet>

        <!-- External JBoss-Messaging (except persistence)  -> /jboss/server/default/deploy -->
		<fileSet>
			<directory>target/files</directory>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>

			<excludes>
				<exclude>jboss-messaging.sar/hsqldb-persistence-service.xml</exclude>
			</excludes>
			<includes>
				<include>jboss-messaging.sar/**</include>
			</includes>
		</fileSet>

        <!-- The JBoss Messaging DS configuration           -> /jboss/server/default/deploy/jboss-messaging.sar -->
		<fileSet>
            <directory>target/classes/jboss/server/default/deploy/jboss-messaging.sar</directory>
			<outputDirectory>jboss/server/default/deploy/jboss-messaging.sar</outputDirectory>

            <includes>
                <include>persistence-service.xml</include>
                <include>*-persistence-service.xml.choice</include>
            </includes>
		</fileSet>

        <!-- External JBoss-Messaging lib                   -> /jboss/server/default/lib -->
		<fileSet>
			<directory>target/files/jboss-messaging-${jboss-messaging.version}</directory>
			<outputDirectory>jboss/server/default/lib</outputDirectory>

			<includes>
				<include>jboss-messaging.jar</include>
			</includes>
		</fileSet>

		<!-- This artifact's custom JBoss configuration     -> /jboss -->
		<fileSet>
			<directory>target/classes/jboss</directory>
			<outputDirectory>jboss</outputDirectory>

			<excludes>
                <exclude>server/default/deploy/jboss-messaging.sar/*-persistence-service.xml</exclude>
			</excludes>
		</fileSet>

        <!-- OSGI Support -->
		<fileSet>
			<directory>target/dependency</directory>
			<outputDirectory>jboss/server/default/lib</outputDirectory>

			<excludes>
				<exclude>safe-online*</exclude>
				<exclude>org.apache.felix.fileinstall*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/dependency</directory>
			<outputDirectory>jboss/osgi/autostart</outputDirectory>

			<includes>
				<include>org.apache.felix.fileinstall*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/classes/osgi</directory>
			<outputDirectory>jboss/osgi</outputDirectory>
		</fileSet>

		<!-- This artifact's EAR dependencies               -> /jboss/server/default/lib -->
		<fileSet>
			<directory>target/deploy</directory>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>
		</fileSet>

        <!-- This artifact's non-EAR dependencies           -> jboss/server/default/lib -->
		<fileSet>
			<directory>target/dependency</directory>
			<outputDirectory>jboss/server/default/lib</outputDirectory>
		</fileSet>

	</fileSets>
 
	<formats>
		<format>zip</format>
	</formats>

</assembly>
