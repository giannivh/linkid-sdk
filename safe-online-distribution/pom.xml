<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>safe-online</artifactId>
		<groupId>net.lin-k</groupId>
		<version>1.3-SNAPSHOT</version>
	</parent>

	<name>SafeOnline Distribution</name>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-distribution</artifactId>
	<version>1.3-SNAPSHOT</version>
	<packaging>pom</packaging>

    <build>

		<resources>
			<resource>
				<directory>src/main</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

        <plugins>

            <!-- 1. Generate SSL server cert for HTTPS. -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>keytool-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>clean</goal>
							<goal>genkey</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<keystore>${project.build.directory}/files/ssl.jks</keystore>
					<dname>cn=${safe-online.host.name}, ou=Development, L=SINT-MARTENS-LATEM, ST=VL, o=LIN.K_NV, c=BE</dname>
					<keypass>secret</keypass>
					<keyalg>RSA</keyalg>
					<storepass>secret</storepass>
					<alias>safe-online</alias>
					<verbose>true</verbose>
				</configuration>
			</plugin>

            <!-- 2. Expand Maven parameters into our customized config files. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>filter</id>
						<phase>process-resources</phase>
						<goals>
							<goal>resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

            <!-- 3. Gather all the artifacts that will make up the distribution. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>

                    <!-- Unpack JBoss AS, JBoss Messaging, JaxWS and our SQL DDL scripts into /files.
                         maven-assembly-plugin will merge them all together into /jboss. -->
					<execution>
						<id>unpack</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.jboss</groupId>
									<artifactId>jboss-as</artifactId>
									<type>zip</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss</groupId>
									<artifactId>jboss-messaging-dist</artifactId>
									<type>zip</type>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss</groupId>
									<artifactId>jboss-messaging-sar</artifactId>
									<type>zip</type>
								</artifactItem>
								<artifactItem>
									<groupId>net.java.dev</groupId>
									<artifactId>jaxws-ri</artifactId>
									<type>zip</type>
								</artifactItem>
								<artifactItem>
									<groupId>net.lin-k.safe-online</groupId>
									<artifactId>safe-online-sql-ddl</artifactId>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/files</outputDirectory>
						</configuration>
					</execution>

                    <!-- Copy EAR dependencies into /deploy.
                         maven-assembly-plugin will move them to /jboss/server/default/deploy. -->
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
                            <includeTypes>ear</includeTypes>
                            <excludeScope>provided</excludeScope>
							<outputDirectory>${project.build.directory}/deploy</outputDirectory>
						</configuration>
					</execution>

                    <!-- Copy non-provided, non-EAR dependencies to /dependency dir.
                         maven-assembly-plugin will move them to /jboss/server/default/lib. -->
					<execution>
						<id>copy-deps</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<excludeScope>provided</excludeScope>
                            <excludeTypes>ear</excludeTypes>
							<outputDirectory>${project.build.directory}/dependency</outputDirectory>
						</configuration>
					</execution>

				</executions>
			</plugin>

            <!-- 4. Apply customization patches to the default distribution configuration. -->
            <plugin>
                <artifactId>maven-patch-plugin</artifactId>
                <executions>
                  <execution>
                    <id>patch</id>
                    <phase>package</phase>
                    <goals>
                        <goal>apply</goal>
                    </goals>
                        <configuration>
                            <patches>
                            </patches>
                            <targetDirectory>target/files/safe-online-base-distribution-${safe-online.version}</targetDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- 5. Assemble our distribution. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
                        <descriptor>src/main/assembly/jboss-${safe-online.distribution}.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
    </build>

	<dependencies>

        <!-- Specific Dependencies: Distribution -->
		<dependency>
			<groupId>org.jboss</groupId>
			<artifactId>jboss-as</artifactId>
			<scope>provided</scope>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>org.jboss</groupId>
			<artifactId>jboss-messaging-dist</artifactId>
			<scope>provided</scope>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>org.jboss</groupId>
			<artifactId>jboss-messaging-sar</artifactId>
			<scope>provided</scope>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>net.java.dev</groupId>
			<artifactId>jaxws-ri</artifactId>
			<scope>provided</scope>
			<type>zip</type>
		</dependency>

        <!-- Specific Dependencies: Extra libs to put in /jboss/server/default/lib -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.fileinstall</artifactId>
		</dependency>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-deploy</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-password-deploy</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>ear</type>
		</dependency>

        <!-- Specific Dependencies: OLAS External Devices -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-beid-deploy</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-digipass-deploy</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-encap-deploy</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-otpoversms-deploy</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>ear</type>
		</dependency>

        <!-- Specific Dependencies: OLAS Demos -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-demo-deploy</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>ear</type>
		</dependency>

        <!-- Specific Dependencies: Persistance Provider -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-sql-ddl</artifactId>
			<version>1.3-SNAPSHOT</version>
            <scope>provided</scope>
			<type>jar</type>
		</dependency>

	</dependencies>

    <!-- DS profiles to manage DS dialect dependencies. -->
    <profiles>

        <profile>
            <id>ds:hsql</id>

            <activation>
                <property>
                    <name>safe-online.data.source.type</name>
                    <value>hsql</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>hsqldb</groupId>
                    <artifactId>hsqldb</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>ds:mysql</id>

            <activation>
                <property>
                    <name>safe-online.data.source.type</name>
                    <value>mysql</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>mysql</groupId>
                    <artifactId>mysql-connector-java</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>ds:postgresql</id>

            <activation>
                <property>
                    <name>safe-online.data.source.type</name>
                    <value>postgresql</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>postgresql</groupId>
                    <artifactId>postgresql</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>ds:oracle</id>

            <activation>
                <property>
                    <name>safe-online.data.source.type</name>
                    <value>oracle</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.oracle.jdbc</groupId>
                    <artifactId>ojdbc5</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
