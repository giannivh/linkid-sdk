<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k.safe-online</groupId>
		<artifactId>demo</artifactId>
		<version>1.4-SNAPSHOT</version>
	</parent>

	<name>SafeOnline SQL DDL (Demos)</name>
    <description>
        The SafeOnline SQL Data Definition Language (Demos). 
	</description>

	<groupId>net.lin-k.safe-online.demo</groupId>
	<artifactId>safe-online-demo-sql-ddl</artifactId>
	<version>1.4-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<resources>
			<resource>
				<directory>src/main</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>filter</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>sql-ddl</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo>Generating SQL DDL...</echo>
								<path id="jpatoolslib">
									<path refid="maven.compile.classpath" />
									<path refid="maven.plugin.classpath" />
									<pathelement location="${project.build.directory}/classes/resources" />
								</path>
								<taskdef classname="org.hibernate.tool.ant.HibernateToolTask"
									name="hibernatetool" classpathref="jpatoolslib" />
								<mkdir dir="${project.build.directory}/classes" />
								<hibernatetool destdir="${project.build.directory}/classes">
									<classpath>
										<path refid="jpatoolslib" />
									</classpath>
									<!-- jpaconfiguration can directly use the PAR -->
									<annotationconfiguration
										configurationfile="${project.build.directory}/classes/resources/hsql-safe-online-demo.cfg.xml" />
									<hbm2ddl export="false" format="true"
										outputfilename="hsql-safe-online-demo-ddl.sql" />
								</hibernatetool>
								<hibernatetool destdir="${project.build.directory}/classes">
									<classpath>
										<path refid="jpatoolslib" />
									</classpath>
									<!-- jpaconfiguration can directly use the PAR -->
									<annotationconfiguration
										configurationfile="${project.build.directory}/classes/resources/mysql-safe-online-demo.cfg.xml" />
									<hbm2ddl export="false" format="true"
										outputfilename="mysql-safe-online-demo-ddl.sql" />
								</hibernatetool>
								<hibernatetool destdir="${project.build.directory}/classes">
									<classpath>
										<path refid="jpatoolslib" />
									</classpath>
									<!-- jpaconfiguration can directly use the PAR -->
									<annotationconfiguration
										configurationfile="${project.build.directory}/classes/resources/postgresql-safe-online-demo.cfg.xml" />
									<hbm2ddl export="false" format="true"
										outputfilename="postgresql-safe-online-demo-ddl.sql" />
								</hibernatetool>
								<hibernatetool destdir="${project.build.directory}/classes">
									<classpath>
										<path refid="jpatoolslib" />
									</classpath>
									<!-- jpaconfiguration can directly use the PAR -->
									<annotationconfiguration
										configurationfile="${project.build.directory}/classes/resources/oracle-safe-online-demo.cfg.xml" />
									<hbm2ddl export="false" format="true"
										outputfilename="oracle-safe-online-demo-ddl.sql" />
								</hibernatetool>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Dependency Groups -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-as</artifactId>
            <version>1.4-SNAPSHOT</version>
            <type>pom</type>
        </dependency>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online.demo</groupId>
			<artifactId>safe-online-demo-bank</artifactId>
			<version>1.4-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online.demo</groupId>
			<artifactId>safe-online-demo-cinema</artifactId>
			<version>1.4-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online.demo</groupId>
			<artifactId>safe-online-demo-payment</artifactId>
			<version>1.4-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>

        <!-- Specific Dependencies: External -->
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-tools</artifactId>
            <optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
            <optional>true</optional>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

</project>
