<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.4-SNAPSHOT</version>
	</parent>

	<name>SafeOnline Demo Bank Keystore</name>
    <description>
        SafeOnline Demo Bank Keystore.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-demo-bank-keystore</artifactId>
	<version>1.4-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>keytool-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>clean</goal>
							<goal>genkey</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<keystore>
						${project.build.directory}/classes/safe-online-demo-bank-keystore.jks
					</keystore>
					<dname>
						CN=SafeOnline Demo Bank, OU=Development,
						L=SINT-MARTENS-LATEM, ST=VL, O=LIN.K_NV, C=BE
					</dname>
					<keypass>secret</keypass>
					<storepass>secret</storepass>
					<alias>safe-online-demo-bank</alias>
					<verbose>true</verbose>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-keystore-util</artifactId>
			<version>1.4-SNAPSHOT</version>
		</dependency>

	</dependencies>

</project>
