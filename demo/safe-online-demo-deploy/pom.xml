			<version>1.4-SNAPSHOT</version>
            <scope>provided</scope>
			<type>war</type>
		</dependency>
            <dependency>
                <groupId>net.lin-k.safe-online.demo</groupId>
                <artifactId>safe-online-demo-payment-webapp</artifactId>
                <version>1.4-SNAPSHOT</version>
                <type>zip</type>
            </dependency>
		<dependency>
			<groupId>net.lin-k.safe-online.demo</groupId>
			<artifactId>safe-online-demo-ws-runtime</artifactId>
			<version>1.4-SNAPSHOT</version>
            <scope>provided</scope>
			<type>war</type>
		</dependency>
            <dependency>
                <groupId>net.lin-k.safe-online.demo</groupId>
                <artifactId>safe-online-demo-ws-runtime</artifactId>
                <version>1.4-SNAPSHOT</version>
                <type>zip</type>
            </dependency>
        <dependency>
   			<groupId>net.lin-k.safe-online.demo</groupId>
			<artifactId>safe-online-demo-startup-runtime</artifactId>
			<version>1.4-SNAPSHOT</version>
            <scope>provided</scope>
            <type>war</type>
        </dependency>
            <dependency>
                <groupId>net.lin-k.safe-online.demo</groupId>
                <artifactId>safe-online-demo-startup-runtime</artifactId>
                <version>1.4-SNAPSHOT</version>
                <type>zip</type>
            </dependency>

		<!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online.demo</groupId>
			<artifactId>safe-online-model-demo</artifactId>
			<version>1.4-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online.demo</groupId>
			<artifactId>safe-online-demo-sql-ddl</artifactId>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
</project>
