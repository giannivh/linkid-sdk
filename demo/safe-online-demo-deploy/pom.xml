<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.lin-ksafe-online</groupId>
		<artifactId>demo</artifactId>
		<version>1.4-SNAPSHOT</version>
	</parent>
	<name>SafeOnline Demo Deploy</name>
	<description> SafeOnline Deployable Demo Application Package. 
	</description>
	<groupId>net.lin-k.safe-online.demo</groupId>
	<artifactId>safe-online-demo-deploy</artifactId>
	<version>1.4-SNAPSHOT</version>
	<packaging>ear</packaging>
	<build>
		<finalName>SafeOnlineZDemo</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-sql</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>net.lin-k.safe-online</groupId>
									<artifactId>safe-online-demo-sql-ddl</artifactId>
									<outputDirectory>${project.build.directory}/SafeOnlineZDemo</outputDirectory>
									<includes>**/*.sql</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>5</version>
					<jboss>
						<version>4</version>
					</jboss>
                    <defaultJavaBundleDir>lib/</defaultJavaBundleDir>
					<modules>
                        <webModule>
                            <groupId>net.lin-k.safe-online.demo</groupId>
                            <artifactId>safe-online-demo-startup-runtime</artifactId>
                        </webModule>
						<webModule>
							<groupId>net.lin-k.safe-online.demo</groupId>
							<artifactId> safe-online-demo-ws-runtime </artifactId>
							<contextRoot>/${safe-online.demo.ws.webapp.url}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online.demo</groupId>
							<artifactId> safe-online-demo-bank-webapp </artifactId>
                            <contextRoot>/${safe-online.demo.bank.webapp.url}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online.demo</groupId>
							<artifactId> safe-online-demo-cinema-webapp </artifactId>
							<contextRoot>/${safe-online.demo.cinema.webapp.url}</contextRoot>
						</webModule>
						<webModule>
							<groupId>net.lin-k.safe-online.demo</groupId>
							<artifactId> safe-online-demo-payment-webapp </artifactId>
							<contextRoot>/${safe-online.demo.payment.webapp.url}</contextRoot>
						</webModule>
					</modules>

					<!--
						Exlude ZIPs. They only serve to force the deps of wars to become
						transitive.
					-->
					<artifactTypeMappings>
						<artifactTypeMapping type="zip" mapping="jar" />
					</artifactTypeMappings>
                    <excludes>
                        <exclude>
                            <groupId>^(?!net.lin-k\.).*$</groupId>
                            <artifactId>^(?!jsf-impl).*$</artifactId>
                        </exclude>
                    </excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<container>
						<containerId>jboss4x</containerId>
						<type>remote</type>
					</container>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor> src/main/assembly/dependencies.xml </descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>

		<!-- Specific Dependencies: OLAS: Forced Dependency Transition -->
		<dependency>
			<groupId>net.lin-k.safe-online.demo</groupId>
