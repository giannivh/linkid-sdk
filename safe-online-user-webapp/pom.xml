<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>${safe-online.version}</version>
	</parent>

	<name>SafeOnline User Web Application</name>
	<description>
		User web application towards the SafeOnline service.
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-user-webapp</artifactId>
	<version>${safe-online.version}</version>
	<packaging>war</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
                    <warSourceExcludes>WEB-INF/lib/*</warSourceExcludes>
                    <!--archive>
                      <manifest>
                        <addClasspath>true</addClasspath>
                        <classpathPrefix>lib/</classpathPrefix>
                      </manifest>
                    </archive-->

					<dependentWarExcludes>
						WEB-INF/web.xml
					</dependentWarExcludes>
					<webResources>
						<resource>
							<directory>
								${basedir}/src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor> src/main/assembly/dependencies.xml </descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Dependency Groups -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-as</artifactId>
            <type>pom</type>
        </dependency>

        <!-- Specific Dependencies: OLAS: Backing Beans -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-user</artifactId>
			<version>${safe-online.version}</version>
            <scope>runtime</scope>
            <type>ejb</type>
		</dependency>

        <!-- Specific Dependencies: OLAS: Forced Dependency Transition -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-webapp-base</artifactId>
			<type>war</type>
		</dependency>
            <dependency>
                <groupId>net.lin-k.safe-online</groupId>
                <artifactId>safe-online-webapp-base</artifactId>
                <version>${safe-online.version}</version>
                <type>zip</type>
            </dependency>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-model</artifactId>
			<version>${safe-online.version}</version>
			<type>ejb-client</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-webapp-common</artifactId>
			<version>${safe-online.version}</version>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-device-sdk</artifactId>
			<version>${safe-online.version}</version>
		</dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-test</artifactId>
            <type>pom</type>
        </dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

</project>
