<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-user-webapp</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>SafeOnline User Web Application</name>
	<description>
		User web application towards the SafeOnline service.
	</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0.3-safe-online</version>
				<configuration>
					<dependentWarExcludes>
						WEB-INF/web.xml
					</dependentWarExcludes>
					<!-- http://jira.codehaus.org/browse/MWAR-18 -->
					<dependencies>
						<dependency>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-identity-applet
							</artifactId>
							<targetFilename>
								safe-online-identity-applet.jar
							</targetFilename>
							<targetPath>/</targetPath>
						</dependency>
						<dependency>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-pkcs11-sc
							</artifactId>
							<targetPath>/</targetPath>
						</dependency>
						<dependency>
							<groupId>net.lin-k.safe-online</groupId>
							<artifactId>
								safe-online-pkcs11-sc-beid
							</artifactId>
							<targetPath>/</targetPath>
						</dependency>
						<dependency>
							<groupId>commons-logging</groupId>
							<artifactId>commons-logging-api</artifactId>
							<targetPath>/</targetPath>
						</dependency>
					</dependencies>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-container</artifactId>
			<type>pom</type>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-webapp-base</artifactId>
			<type>war</type>
			<version>1.0-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-identity-applet</artifactId>
			<version>1.0-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>changes-maven-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
</project>
