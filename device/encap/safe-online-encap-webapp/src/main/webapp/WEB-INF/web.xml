<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" [
    <!ENTITY web-common-wicket SYSTEM "web-common-wicket.xml">
    <!ENTITY web-error-codes SYSTEM "web-error-codes.xml"> ]>

<web-app>

	<display-name>Olas Encap Device Web Application</display-name>

    <!-- Application Context Parameters -->
	<context-param>
		<param-name>WebappPath</param-name>
        <param-value>/${safe-online.encap.webapp.name}/</param-value>
	</context-param>
	<context-param>
		<param-name>CommercialName</param-name>
		<param-value>${safe-online.commercial.name}</param-value>
	</context-param>
	<context-param>
		<param-name>ApplicationName</param-name>
		<param-value>${safe-online.encap.webapp.name}</param-value>
	</context-param>

    <!-- Application Filter Definitions And Mappings -->
	<filter>
		<filter-name>WicketFilter</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>

		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>net.link.safeonline.encap.webapp.EncapApplication</param-value>
		</init-param>
		<init-param>
			<param-name>configuration</param-name>
			<param-value>${wicket.configuration}</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>JAASLoginFilter</filter-name>
		<filter-class>net.link.safeonline.sdk.auth.filter.JAASLoginFilter</filter-class>

		<init-param>
			<param-name>LoginContextName</param-name>
			<param-value>client-login</param-value>
		</init-param>
	</filter>
    <filter>
        <filter-name>AuditContextFilter</filter-name>
        <filter-class>net.link.safeonline.util.filter.AuditContextFilter</filter-class>
    </filter>
	<!-- ${safe-online.profiling.filter} -->

    <filter-mapping>
        <filter-name>AuditContextFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<filter-mapping>
		<filter-name>JAASLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>WicketFilter</filter-name>
		<url-pattern>/*</url-pattern>

		<dispatcher>REQUEST</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>

    <!-- Application Servlet Definitions And Mappings -->
	<servlet>
		<servlet-name>AuthLandingServlet</servlet-name>
		<servlet-class>net.link.safeonline.encap.servlet.DeviceAuthenticationLandingServlet</servlet-class>

		<init-param>
			<param-name>AuthenticationPath</param-name>
			<param-value>authentication</param-value>
		</init-param>
		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>ExitServlet</servlet-name>
		<servlet-class>net.link.safeonline.encap.servlet.DeviceAuthenticationExitServlet</servlet-class>

		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>DeviceLandingServlet</servlet-name>
		<servlet-class>net.link.safeonline.encap.servlet.DeviceOperationLandingServlet</servlet-class>

        <init-param>
            <param-name>RegistrationPath</param-name>
            <param-value>registration</param-value>
        </init-param>
        <init-param>
            <param-name>RemovalPath</param-name>
            <param-value>remove</param-value>
        </init-param>
		<init-param>
			<param-name>DisablePath</param-name>
			<param-value>disable</param-value>
		</init-param>
		<init-param>
			<param-name>EnablePath</param-name>
			<param-value>enable</param-value>
		</init-param>
		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>DeviceExitServlet</servlet-name>
		<servlet-class>net.link.safeonline.encap.servlet.DeviceOperationExitServlet</servlet-class>

		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>protocol-error</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>DisableServlet</servlet-name>
		<servlet-class>net.link.safeonline.encap.servlet.DisableServlet</servlet-class>

		<init-param>
			<param-name>DeviceExitPath</param-name>
			<param-value>deviceexit</param-value>
		</init-param>
	</servlet>
    <servlet>
        <servlet-name>RemoveServlet</servlet-name>
        <servlet-class>net.link.safeonline.encap.servlet.RemoveServlet</servlet-class>

        <init-param>
            <param-name>DeviceExitPath</param-name>
            <param-value>deviceexit</param-value>
        </init-param>
    </servlet>
	<servlet>
		<servlet-name>Style Servlet</servlet-name>
		<servlet-class>net.link.safeonline.webapp.resources.ApplicationStyleServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AuthLandingServlet</servlet-name>
		<url-pattern>/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ExitServlet</servlet-name>
		<url-pattern>/authenticationexit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeviceLandingServlet</servlet-name>
		<url-pattern>/device</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeviceExitServlet</servlet-name>
		<url-pattern>/deviceexit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DisableServlet</servlet-name>
		<url-pattern>/disable</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveServlet</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>Style Servlet</servlet-name>
		<url-pattern>/theme.css</url-pattern>
	</servlet-mapping>

	&web-common-wicket;

	&web-error-codes;

</web-app>
