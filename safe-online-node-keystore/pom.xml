<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.2-SNAPSHOT</version>
	</parent>

	<name>SafeOnline Node Keystore</name>
    <description>
        SafeOnline Node Keystore.
    </description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-node-keystore</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>keytool-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>clean</goal>
							<goal>genkey</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<keystore>
						${project.build.directory}/classes/safe-online-node-keystore.jks
					</keystore>
					<dname>
						cn=SafeOnline Node ${safe-online.node.name},
						ou=Development, L=SINT-MARTENS-LATEM, ST=VL,
						o=LIN.K_NV, c=BE
					</dname>
					<keypass>secret</keypass>
					<storepass>secret</storepass>
					<alias>safe-online</alias>
					<verbose>true</verbose>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

</project>
