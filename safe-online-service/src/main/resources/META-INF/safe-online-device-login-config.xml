<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policy PUBLIC
      "-//JBoss//DTD JBOSS Security Config 3.0//EN"
      "http://www.jboss.org/j2ee/dtd/security_config.dtd">
<policy>

	<application-policy name="safe-online-device">
		<authentication>
			<login-module
				code="net.link.safeonline.jaas.SafeOnlineDeviceLoginModule"
				flag="required">
				<module-option name="authenticationServiceJndiName">
					SafeOnline/DeviceAuthenticationServiceBean/local
				</module-option>
			</login-module>
		</authentication>
	</application-policy>

</policy>
