<?xml version="1.0" encoding="UTF-8"?>
<policy xmlns="urn:jboss:security-config:4.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:jboss:security-config:4.1 resource:security-config_4_1.xsd"
	version="4.1">

	<application-policy name="safe-online-application">
		<authentication>
			<login-module
				code="net.link.safeonline.jaas.SafeOnlineApplicationLoginModule"
				flag="required">
				<module-option name="authenticationServiceJndiName">
					SafeOnline/AuthenticationServiceBean/local
				</module-option>
			</login-module>
		</authentication>
	</application-policy>

</policy>
