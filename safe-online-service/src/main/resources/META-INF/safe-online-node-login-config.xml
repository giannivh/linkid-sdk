<!DOCTYPE policy PUBLIC
      "-//JBoss//DTD JBOSS Security Config 3.0//EN"
      "http://www.jboss.org/j2ee/dtd/security_config.dtd">
<policy>

	<application-policy name="safe-online-node">
		<authentication>
			<login-module
				code="net.link.safeonline.jaas.SafeOnlineNodeLoginModule"
				flag="required">
				<module-option name="authenticationServiceJndiName">
					SafeOnline/NodeAuthenticationServiceBean/local
				</module-option>
			</login-module>
		</authentication>
	</application-policy>

</policy>
