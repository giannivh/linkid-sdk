<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.4</version>
	</parent>

	<name>SafeOnline JSF Web Application Base</name>
	<description>
		Provides the base for SafeOnline web applications in JSF. 
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-webapp-base-jsf</artifactId>
	<version>1.4</version>
	<packaging>war</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<packagingExcludes>WEB-INF/lib/*</packagingExcludes>
					<filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
					<webResources>
						<resource>
							<directory>
								${basedir}/src/main/webapp/WEB-INF
	                            </directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>

					<overlays>
						<overlay>
							<groupId>net.lin-k.safe-online</groupId>
                            <artifactId>safe-online-webapp-base-${safe-online.branding}</artifactId>
							<excludes>
								<exclude>WEB-INF/web.xml</exclude>
								<exclude>index.jsp</exclude>
							</excludes>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor> src/main/assembly/dependencies.xml </descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- Dependency Groups -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-container-as</artifactId>
            <version>1.4</version>
			<type>pom</type>
		</dependency>

		<!-- Specific Dependencies: OLAS: Forced Dependency Transition -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-webapp-base-${safe-online.branding}</artifactId>
			<scope>provided</scope>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-webapp-base-${safe-online.branding}</artifactId>
			<version>1.4</version>
			<type>zip</type>
		</dependency>

		<!-- Test Dependencies -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-container-test</artifactId>
            <version>1.4</version>
			<type>pom</type>
		</dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

</project>
