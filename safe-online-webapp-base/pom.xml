	<name>SafeOnline Web Application Base</name>
    <description>
        Provides the base for SafeOnline web applications. 
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-webapp-base</artifactId>
	<version>1.1</version>
	<packaging>war</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webResources>
						<resource>
							<directory> ${basedir}/src/main/webapp/WEB-INF </directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>

