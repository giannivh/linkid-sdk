/* ==================================================================
 * Transparent
 * ----------- */

input,
select,
textarea,
img.label,
.af_inputFile {

    background-color:   transparent;
}



/* ==================================================================
 * White
 * ----- */

#header a,
#header ul.menu li a,
input.submit {

    color:              white;
}


#_content,
table.listingTable  tbody tr,
table.rich-table    tbody tr {

    background-color:   white;
}



/* ==================================================================
 * Nearly White
 * ------------ */

table.listingTable  tbody tr:hover,
table.rich-table    tbody tr:hover {
    
    background-color:   #f9f9f9;
}



/* ==================================================================
 * Bright Grey
 * ----------- */

#_sidebox,
table.listingTable  tfoot tr,
table.rich-table    tfoot tr {

    background-color:   #E8E7E7;
}


table tbody,
table tfoot,
    table.listingTable,
    table.listingTable  tbody tr,
table.rich-table,
table tr.rich-table-row,
table tr.rich-table-firstrow,
table tr.rich-table-footer {

    border-color:       #E8E7E7 !important;
}



/* ==================================================================
 * Grey
 * ---- */

#footer {

    color:              #CCC;
}



/* ==================================================================
 * Dark Grey
 * --------- */

input.label:active,
.usage_agreement {

    border-color:       #888;
}



/* ==================================================================
 * Darker Grey
 * ----------- */

body {
	background-color:   #333;
}


body,
#header ul.menu li a:hover,
#header ul.menu li.selected a,
    a:hover,
    #sidebox li a:hover,
    #sidebox li.active a,
input,
select,
textarea,
img.label,
input.radio,
.af_inputFile {

    color:              #333;
}


#sidebox ul,
input.label,
textarea.label {

    border-color:       #333;
}



/* ==================================================================
 * Darker Themed
 * ------------ */

ul.submenu li.selected a {

    color:              $darker;
}



/* ==================================================================
 * Themed
 * ----- */

h2,
a,
ul.timeline li.active,
#sidebox li a {

    color:              $bright;
}


textarea {

    border-color:       $bright;
}



/* ==================================================================
 * Lighter Themed
 * ------------- */

#sidebox li a:hover,
#sidebox li.active a {
	background-color:   $brighter;
}


a:hover {

    border-color:       $brighter;
}



