/* ==================================================================
 * Transparent
 * ----------- */

input,
select,
textarea,
img.label,
.af_inputFile,
div.dr-dscr table tr:hover {

    background-color:   transparent !important;
}



/* ==================================================================
 * White
 * ----- */

#c-header a,
#c-header ul.menu li a,
input.submit {

    color:              white;
}


#c-content,
table.listingTable  tbody tr,
table.rich-table    tbody tr {

    background-color:   white;
}



/* ==================================================================
 * Nearly White
 * ------------ */

table.listingTable  tbody tr:hover,
table.rich-table    tbody tr:hover {
    
    background-color:   #f0f0f0;
}



/* ==================================================================
 * Bright Grey
 * ----------- */

#c-sidebox,
table.listingTable  tfoot tr,
table.rich-table    tfoot tr {

    background-color:   #E8E7E7;
}


table.rich-table tbody tr th, table.rich-table tbody tr td,
table.listingTable tbody tr th, table.listingTable tbody tr td {

    border-color:       #E8E7E7 !important;
}
table.listingTable, table.rich-table {

    border-top-color:   #E8E7E7;
    border-left-color:  #E8E7E7;
}



/* ==================================================================
 * Grey
 * ---- */

#footer {

    color:              #CCC;
}
table.listingTable, table.rich-table {

    border-right-color: #CCC;
    border-bottom-color:#CCC;
}



/* ==================================================================
 * Dark Grey
 * --------- */

input.label:active,
.usage_agreement {

    border-color:       #888;
}



/* ==================================================================
 * Darker Grey
 * ----------- */

body {

	background-color:   #333;
}


body,
#c-header ul.menu li a:hover,
#c-header ul.menu li.selected a,
    a:hover,
    #sidebox li a:hover,
    #sidebox li.active a,
input,
select,
textarea,
img.label,
input.radio,
.af_inputFile {

    color:              #333;
}


#sidebox ul,
input.label,
textarea.label {

    border-color:       #333;
}



/* ==================================================================
 * Darker Themed
 * ------------ */

ul.submenu li.selected a {

    color:              $darker;
}



/* ==================================================================
 * Themed
 * ----- */

h2,
a,
ul.timeline li.active,
#sidebox li a {

    color:              $bright;
}


textarea {

    border-color:       $bright;
}



/* ==================================================================
 * Lighter Themed
 * ------------- */

#sidebox li a:hover,
#sidebox li.active a {
	background-color:   $brighter;
}


a:hover {

    border-color:       $brighter;
}



