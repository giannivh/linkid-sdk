<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>${safe-online.version}</version>
	</parent>

	<name>SafeOnline Data Web Service Definition</name>
    <description>
        Contains WSDL for the SafeOnline Data Web Service. 
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-data-ws</artifactId>
	<version>${safe-online.version}</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>wsimport</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
									<classpath>
										<path refid="maven.compile.classpath" />
										<path refid="maven.plugin.classpath" />
										<path refid="maven.runtime.classpath" />
									</classpath>
								</taskdef>
								<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
									<classpath>
										<path refid="maven.compile.classpath" />
										<path refid="maven.plugin.classpath" />
										<path refid="maven.runtime.classpath" />
									</classpath>
								</taskdef>
								<mkdir dir="${project.build.directory}/generated-sources/xjc" />
								<xjc destdir="${project.build.directory}/generated-sources/xjc"
									catalog="${basedir}/src/main/jaxb/catalog.xml">
									<schema dir="${basedir}/src/main/resources" includes="liberty-idwsf-soap-binding-v2.0.xsd" />
									<arg value="-debug" />
								</xjc>
								<mkdir dir="${project.build.directory}/generated-classes/jaxws" />
								<wsimport debug="true" fork="true"
									destdir="${project.build.directory}/generated-classes/jaxws"
									verbose="true"
									wsdl="${basedir}/src/main/resources/liberty-idwsf-dst-ref-v2.1-link.wsdl"
									sourcedestdir="${project.build.directory}/generated-sources/xjc"
									catalog="${basedir}/src/main/jaxb/catalog.xml">
									<produces
										dir="${project.build.directory}/generated-classes/jaxws">
                                        <include name="**/*.class" />
									</produces>
								</wsimport>
							</tasks>
							<sourceRoot> ${project.build.directory}/generated-sources/xjc 
							</sourceRoot>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

        <!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-ws-common</artifactId>
			<version>${safe-online.version}</version>
		</dependency>
		<!--dependency>
			<groupId>com.sun.xml.ws</groupId>
			<artifactId>jaxws-tools</artifactId>
			<optional>true</optional>
		</dependency-->

        <!-- Test Dependencies -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-test</artifactId>
            <type>pom</type>
        </dependency>

	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>changes-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>

</project>
