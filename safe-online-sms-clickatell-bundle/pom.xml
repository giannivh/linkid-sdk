<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.lin-k</groupId>
		<artifactId>safe-online</artifactId>
		<version>1.4</version>
	</parent>

	<name>Clickatell SMS Service OSGI bundle</name>
	<description>
		Clickatell implementation bundle for the OSGi SMS Service.
	</description>

	<groupId>net.lin-k.safe-online</groupId>
	<artifactId>safe-online-sms-clickatell-bundle
	</artifactId>
	<version>1.4</version>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<fork>true</fork>
				</configuration>
				<inherited>true</inherited>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Export-Package>
						</Export-Package>
						<Private-Package>net.link.safeonline.sms.clickatell.osgi.*
						</Private-Package>
						<Import-Package>
							!javax.swing.*,
							!javax.imageio.*,
							!com.sun.jimi.core,!sun.awt.*,
							!org.exolab.castor.xml,
							!com.sun.jdmk.comm,
							!org.apache.bsf, javax.xml.namespace,
							*
						</Import-Package>
						<Bundle-Activator>
							net.link.safeonline.sms.clickatell.osgi.ClickatellSmsServiceActivator
						</Bundle-Activator>
						<Bundle-SymbolicName>${pom.artifactId}
						</Bundle-SymbolicName>
						<Embed-Dependency>*;scope=compile|runtime;type=!pom
						</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<!--Embed-StripVersion>true</Embed-StripVersion-->
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- Specific Dependencies: OLAS -->
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi</artifactId>
			<version>1.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-osgi-sms</artifactId>
			<version>1.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.lin-k.safe-online</groupId>
			<artifactId>safe-online-sms-clickatell-sdk
			</artifactId>
			<version>1.4</version>
		</dependency>

		<!-- Specific Dependencies: External -->
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.compendium</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.5.7-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-osgi</artifactId>
			<version>1.5.7-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>commons-net</groupId>
			<artifactId>commons-net</artifactId>
			<scope>runtime</scope>
		</dependency>

	</dependencies>
</project>
